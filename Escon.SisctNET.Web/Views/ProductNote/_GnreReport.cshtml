<thead style="font-size:13px;">
    <tr>
        <th style="text-align:center">Data</th>
        <th style="text-align:center">Nº NFe</th>
        <th style="text-align:center">Fornecedor</th>
        <th style="text-align:center">ICMS ST NFe</th>
        <th style="text-align:center">Fecop ST NFe</th>
        <th style="text-align:center">Gnre Paga</th>
        <th style="text-align:center">Gnre Fecop Paga</th>
    </tr>
</thead>
<tbody style="font-size:11px;">
    @foreach (var item in ViewBag.Fornecedores)
    {
        <tr>
            <td>@item[1]</td>
            <td>@item[2]</td>
            <td>@item[3]</td>
            <td style="text-align:right; padding-right:1%">@string.Format("{0:N}", Convert.ToDecimal(item[4].Replace(".", ",")))</td>
            <td style="text-align:right; padding-right:1%">@string.Format("{0:N}", Convert.ToDecimal(item[7].Replace(".", ",")))</td>
            <td style="text-align:right; padding-right:1%">@string.Format("{0:N}", Convert.ToDecimal(item[5].Replace(".", ",")))</td>
            <td style="text-align:right; padding-right:1%">@string.Format("{0:N}", Convert.ToDecimal(item[8].Replace(".", ",")))</td>
        </tr>
    }
</tbody>
<tbody style="font-size:11px;">
    <tr style="border:2px solid">
        <td colspan="3"><strong>Total</strong></td>
        <td style="text-align:right; padding-right:1%"><strong>@string.Format("{0:N}", ViewBag.IcmsStTotal)</strong></td>
        <td style="text-align:right; padding-right:1%"><strong>@string.Format("{0:N}", ViewBag.FecopStTotal)</strong></td>
        <td style="text-align:right; padding-right:1%"><strong>@string.Format("{0:N}", ViewBag.GnrePagaTotal)</strong></td>
        <td style="text-align:right; padding-right:1%"><strong>@string.Format("{0:N}", ViewBag.GnreFecopPagaTotal)</strong></td>
    </tr>
</tbody>