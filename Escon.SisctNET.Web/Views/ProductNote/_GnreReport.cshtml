<table class="table" style="font-size:8px; border: 2px solid;">
    <thead style="font-size:13px;">
        <tr>
            <th style="text-align:center">Data</th>
            <th style="text-align:center">Nº NFe</th>
            <th style="text-align:center">Fornecedor</th>
            <th style="text-align:center">ICMS ST NFe</th>
            <th style="text-align:center">Fecop ST NFe</th>
            <th style="text-align:center">Gnre Paga</th>
            <th style="text-align:center">Gnre Fecop Paga</th>
        </tr>
    </thead>
    <tbody style="font-size:11px;">
        @for (int i = 0; i < @ViewBag.Fornecedores.Count; i++)
        {
            <tr>
                <td>@ViewBag.Fornecedores[i][1]</td>
                <td>@ViewBag.Fornecedores[i][2]</td>
                <td>@ViewBag.Fornecedores[i][3]</td>
                <td style="text-align:right; padding-right:1%">@string.Format("{0:C}", Convert.ToDecimal(ViewBag.Fornecedores[i][4]))</td>
                <td style="text-align:right; padding-right:1%">@string.Format("{0:C}", Convert.ToDecimal(ViewBag.Fornecedores[i][7]))</td>
                <td style="text-align:right; padding-right:1%">@string.Format("{0:C}", Convert.ToDecimal(ViewBag.Fornecedores[i][5]))</td>
                <td style="text-align:right; padding-right:1%">@string.Format("{0:C}", Convert.ToDecimal(ViewBag.Fornecedores[i][8]))</td>
            </tr>
        }
    </tbody>
    <tbody style="font-size:11px;">
        <tr style="border:2px solid">
            <td colspan="3"><strong>Total</strong></td>
            <td style="text-align:right; padding-right:1%"><strong>@string.Format("{0:C}", ViewBag.IcmsStTotal)</strong></td>
            <td style="text-align:right; padding-right:1%"><strong>@string.Format("{0:C}", ViewBag.FecopStTotal)</strong></td>
            <td style="text-align:right; padding-right:1%"><strong>@string.Format("{0:C}", ViewBag.GnrePagaTotal)</strong></td>
            <td style="text-align:right; padding-right:1%"><strong>@string.Format("{0:C}", ViewBag.GnreFecopPagaTotal)</strong></td>
        </tr>
    </tbody>
</table>