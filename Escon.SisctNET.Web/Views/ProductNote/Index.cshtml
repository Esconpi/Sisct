@model IEnumerable<Escon.SisctNET.Model.ProductNote>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <a asp-controller="Note" asp-action="Index" asp-route-id="@ViewBag.Id" asp-route-year="@ViewBag.Year" asp-route-month="@ViewBag.Month" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
            <h3 class="box-title"><strong>Produtos</strong></h3>
        </div>
        <div class="box-body">
            <div style="width:100%; padding:20px;">
                <table class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Xprod)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ncm)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cest)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cfop)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vprod)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (item.Orig != 0)
                            {
                                <tr style="color:red;">
                                    <td>
                                        @if (item.Status.Equals(false))
                                        {
                                            <i class="fa fa-times-circle" style="color:red;"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-check-circle" style="color:green;"></i>
                                        }
                                        @Html.DisplayFor(modelItem => item.Xprod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ncm)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cest)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cfop)
                                    </td>
                                    <td class="money">
                                        @Html.DisplayFor(modelItem => item.Vprod)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Product", new { id = item.Id }, new { @class = "fa fa-calculator", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Tributar Produto" })
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        @if (item.Status.Equals(false))
                                        {
                                            <i class="fa fa-times-circle" style="color:red;"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-check-circle" style="color:green;"></i>
                                        }
                                        @Html.DisplayFor(modelItem => item.Xprod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ncm)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cest)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cfop)
                                    </td>
                                    <td class="money">
                                        @Html.DisplayFor(modelItem => item.Vprod)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Product", new { id = item.Id }, new { @class = "fa fa-calculator", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Tributar Produto" })
                                    </td>
                                </tr>
                            }


                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="box-footer"></div>
    </div>