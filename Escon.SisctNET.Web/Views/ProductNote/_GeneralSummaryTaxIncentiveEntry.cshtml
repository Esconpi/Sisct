
<div style="border:2px solid; text-align:center; page-break-before: always;">
    <strong>RESUMO DOS IMPOSTOS</strong>
</div>

<table class="table" style="font-size: 12px; border:2px solid;">
    <thead>
        <tr>
            <th style="width:120px; text-align:center">Código DAR</th>
            <th style="width:100px; text-align:center">Total do Imposto</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Incetive == true)
        {
            <tr>
                <td style="text-align:center">@ViewBag.DarIcms</td>
                <td style="text-align:right; padding-right:1%;">@ViewBag.TotalDarIcms</td>
            </tr>
        }
        <tr>
            <td style="text-align:center">@ViewBag.DarSTCO</td>
            <td style="text-align:right; padding-right:1%;">@ViewBag.TotalDarSTCO</td>
        </tr>
        <tr>
            <td style="text-align:center">@ViewBag.DarFecop</td>
            <td style="text-align:right; padding-right:1%;">@ViewBag.TotalDarFecop</td>
        </tr>
        @if (ViewBag.Incetive == true && ViewBag.TypeIncetive == false)
        {
            <tr>
                <td style="text-align:center">@ViewBag.DarCotac</td>
                <td style="text-align:right; padding-right:1%;">@ViewBag.TotalDarCotac</td>
            </tr>
        }
        @if (ViewBag.Incetive == true)
        {
            <tr>
                <td style="text-align:center">@ViewBag.DarFunef</td>
                <td style="text-align:right; padding-right:1%;">@ViewBag.TotalDarFunef</td>
            </tr>
        }
    </tbody>
</table>

