<table class="table" style="font-size:8px; border: 2px solid;">
    <thead style="font-size:13px;">
        <tr>
            <th style="text-align:center">Nº NFe</th>
            <th style="text-align:center">Data</th>
            <th style="text-align:center">Fornecedor</th>
            <th style="text-align:center">CNPJ</th>
            <th style="text-align:center">Valor NFe</th>
            <th style="text-align:center">ICMS ST NFe</th>
        </tr>
    </thead>
    <tbody style="font-size:13px;">
        @foreach (var item in ViewBag.NNotes)
        {
            <tr>
                <td>@item[0]</td>
                <td>@item[1]</td>
                <td>@item[2]</td>
                <td>@item[3]</td>
                <td style="text-align:right; padding-right:1%">@item[4]</td>
                <td style="text-align:right; padding-right:1%">@item[5]</td>
            </tr>
        }
    </tbody>
</table>
