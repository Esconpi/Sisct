<br />

@if (ViewBag.Type == "AgrupadoA")
{
    <strong>Agrupado Analítico -&nbsp;</strong>
}

@if (ViewBag.Type == "AgrupadoS")
{
    <strong>Agrupado Sintético -&nbsp;</strong>
}

@if (ViewBag.Type == "Geral")
{
    <strong>Resumo Geral</strong>

    @if (ViewBag.IsPauta == false)
    {
        <strong>&nbsp;NFe</strong>
    }
}

@if (ViewBag.Type == "IcmsST")
{
    <strong>Notas com Icms ST de Empresas sem IE -&nbsp;</strong>
}

@if (ViewBag.Type == "IcmsProdutor")
{
    <strong>Icms Produtor Rural</strong>
}

@if (ViewBag.Type == "Nota")
{
    <strong>Nota: @ViewBag.NotaNumber -&nbsp;</strong>
}

@if (ViewBag.Type == "NotaI")
{
    <strong>Nota Incentivada: @ViewBag.NotaNumber -&nbsp;</strong>
}

@if (ViewBag.Type == "NotaNI")
{
    <strong>Nota Não Incentivada: @ViewBag.NotaNumber -&nbsp;</strong>
}

@if (ViewBag.Type != "GNRE" && ViewBag.Type != "Geral" && ViewBag.Type != "ProdutoFP" && ViewBag.Type != "ProdutoP" && 
     ViewBag.Type != "ProdutoFI" && ViewBag.Type != "IcmsProdutor" && ViewBag.Type != "ProdutoRN" && ViewBag.Type != "ProdutoNR" &&
     ViewBag.Type != "RegimeBA" &&  ViewBag.Type != "RegimeBA2")
{
    @if (ViewBag.TypeTaxation == "ST")
    {
        <strong>Substituição Tributária por MVA</strong>

        @if (ViewBag.IsPauta == false)
        {
             <strong>&nbsp;NFe</strong>
        }
    }
    else if (ViewBag.TypeTaxation == "AP")
    {
        <strong>Antecipação Parcial</strong>
    }
    else if (ViewBag.TypeTaxation == "CO")
    {
        <strong>Consumo</strong>
    }
    else if (ViewBag.TypeTaxation == "COR")
    {
        <strong>Consumo p/ Revenda</strong>
    }
    else if (ViewBag.TypeTaxation == "IM")
    {
        <strong>Imobilizado</strong>
    }
    else if (ViewBag.TypeTaxation == "Isento")
    {
        <strong>Isento</strong>
    }
    else if (ViewBag.TypeTaxation == "AT")
    {
        <strong>Antecipação Total</strong>
    }
    else if (ViewBag.TypeTaxation == "NT")
    {
        <strong>Não Tributado</strong>
    }

    @if ((ViewBag.TypeTaxation == "AP" || ViewBag.TypeTaxation == "CO" || ViewBag.TypeTaxation == "COR" || ViewBag.TypeTaxation == "IM") && ViewBag.Type != "AgrupadoS")
    {
        @if (ViewBag.IsCTe == true)
        {
            <strong>&nbsp;Produto/Frete CTe</strong>
        }
    }
}

@if (ViewBag.Type == "ProdutoI")
{
    <strong>&nbsp;- Produto Incentivado</strong>
}

@if (ViewBag.Type == "ProdutoNI")
{
    <strong>&nbsp;- Produto Não Incentivado</strong>
}

@if (ViewBag.Type == "ProdutoFP")
{
    <strong>Produtos Sem Preço de Referência</strong>
}

@if (ViewBag.Type == "ProdutoP")
{
    <strong>Produtos Com Preço de Referência</strong>
}

@if (ViewBag.Type == "ProdutoFI")
{
    <strong>Produtos Fora do Incentivo (Exceto ST)</strong>
}

@if (ViewBag.Type == "GNRE")
{
    <strong>GNRE de Fornecedor sem Inscrição Estadual</strong>
}

@if (ViewBag.Type == "ProdutoRN")
{
    <strong>Produto que fazem parte do regime especial trbutado normalmente</strong>
}

@if (ViewBag.Type == "ProdutoNR")
{
    <strong>Produto tributado normalmente mas fazem parte do regime especial</strong>
}

@if (ViewBag.Type == "RegimeBA")
{
    <strong>Apuração ICMS Regime Especial</strong>
}

@if (ViewBag.Type == "RegimeBA2")
{
    <strong>ICMS Regime Especial</strong>
}