<div style="width: 100%; font-size:12px; page-break-before: always;">
    <table class="table" style="border: 2px solid;">
        <thead>
            <tr>
                <th></th>
                <th>Total da Base de Cálculo Incentivo</th>
                <th>Total Icms Não Incentivado</th>
                <th>Total Icms Incentivado</th>
                <th>Total Fecop Não Incentivada</th>
                <th>Total Fecop Incentivada</th>
                <th style="text-align:center" width="120px">Total</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Anexo != 3)
            {
                <tr>
                    <th>
                        Base de Cálculo Regime
                    </th>
                    <td style="text-align:right;padding-right:1%">@ViewBag.Base</td>
                    <td style="text-align:center"> ---- </td>
                    <td style="text-align:center"> ---- </td>
                    <td style="text-align:center"> ---- </td>
                    <td style="text-align:center"> ---- </td>
                    <th style="text-align:right;padding-right:1%">@ViewBag.Base</th>
                </tr>
            }
            <tr>
                <th>
                    Imposto Normal
                </th>
                <td style="text-align:center"> ---- </td>
                <td style="text-align:right;padding-right:1%">@ViewBag.IcmsNormal</td>
                <td style="text-align:right;padding-right:1%">@ViewBag.IcmsIncentivo</td>
                <td style="text-align:right;padding-right:1%">@ViewBag.FecopNormal</td>
                <td style="text-align:right;padding-right:1%">@ViewBag.FecopIncentivo</td>
                <th style="text-align:right;padding-right:1%">@ViewBag.ImpostoGeral</th>
            </tr>
        </tbody>
    </table>
</div>

<div style="width: 100%; overflow: hidden; font-size:12px;">
    @if (ViewBag.Anexo == 3)
    {
        @await Html.PartialAsync("_IncentiveDrugsSectionII", new ViewDataDictionary(ViewData))

        <div style="width: 100%; font-size:12px; padding-top:10px;">
            @await Html.PartialAsync("_Medicament", new ViewDataDictionary(ViewData))
        </div>
    }
    else
    {
        @await Html.PartialAsync("_AutoParts", new ViewDataDictionary(ViewData))
    }

</div>

<div style="width:100%; overflow:hidden;">
    <div class="col-lg-12 col-md-12 col-sm-12" style="border:2px solid; text-align:center;">
        <strong>RESUMO DOS IMPOSTOS</strong>
    </div>
    <table class="table" style="border: 2px solid;">
        <thead>
            <tr style="border: 2px solid;">
                <th width="500px"></th>
                <th style="text-align:center">Valor do Imposto</th>
                <th style="text-align:center">Código DAR</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th style="text-align:center">ICMS</th>
                <td style="text-align:right"> @ViewBag.ImpostoIcms</td>
                <td style="text-align:center">@ViewBag.DarIcms</td>
            </tr>
            <tr>
                <th style="text-align:center">Fecop</th>
                <td style="text-align:right">@ViewBag.ImpostoFecop</td>
                <td style="text-align:center">@ViewBag.DarFecop</td>
            </tr>
            <tr>
                <th style="text-align:center">Funef</th>
                <td style="text-align:right">@ViewBag.TaxaFunef</td>
                <td style="text-align:center">@ViewBag.DarFunef</td>
            </tr>
            <tr style="border: 2px solid;">
                <th style="text-align:center">Total</th>
                <td style="text-align:right"><strong>@ViewBag.TotalImpostoIncentivo</strong></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>