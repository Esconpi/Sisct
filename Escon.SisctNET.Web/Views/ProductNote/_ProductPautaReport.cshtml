@model IEnumerable<Escon.SisctNET.Model.ProductNote>

<thead>
       <tr style="font-size:12px;">
        <th colspan="3">Nota Fiscal</th>
        <th colspan="3">Ato Normativo</th>
    </tr>
    <tr style="font-size:12px;">
        <th>Cod. Produto</th>
        <th>Produto</th>
        <th>Valor</th>
        <th>Cod. Produto</th>
        <th>Produto</th>
        <th>Valor</th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr style="font-size:10px;">
            <td>@item.Cprod</td>
            <td>@item.Xprod</td>
            <td>@item.Vprod</td>
            @if (item.Product != null)
            {
                <td>@item.Product.Code</td>
                <td>@item.Product.Description</td>
                <td>@item.Product.Price</td>
            }
            else if (item.Product1 != null)
            {
                <td>@item.Product1.Code</td>
                <td>@item.Product1.Description</td>
                <td>@item.Product1.Price</td>
            }
            else if (item.Product2 != null)
            {
                <td>@item.Product2.Code</td>
                <td>@item.Product2.Description</td>
                <td>@item.Product2.Price</td>
            }
            else if (item.Product3 != null)
            {
                <td>@item.Product3.Code</td>
                <td>@item.Product3.Description</td>
                <td>@item.Product3.Price</td>
            }
        </tr>
    }
</tbody>