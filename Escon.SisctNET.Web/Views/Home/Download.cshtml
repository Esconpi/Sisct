@model Escon.SisctNET.Model.Company

@{
    ViewData["Title"] = "Download";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="Home" asp-action="Sped" size="large" asp-route-id="@Model.Id" asp-route-year="@ViewBag.Year" asp-route-month="@ViewBag.Month" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"> <strong>Sped Corrigido:</strong> @Html.DisplayFor(model => model.SocialName) - @Html.DisplayFor(model => model.Document) </h3>

    </div>
    <div class="box-body">
        <div  style="width:100%; padding:20px;">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>N° Nota</th>
                        <th>Valor Nota</th>
                        <th>N° Item</th>
                        <th>Código Produto</th>
                        <th>Descrição Produto</th>
                        <th>Valor Produto Original</th>
                        <th>Valor Produto Corrigido</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in SessionManager.GetProductsSped())
                    {
                        @if (Convert.ToDecimal(p[8]) > 0)
                        {
                            <tr style="color:red;">
                                <td>@p[0]</td>
                                <td>@p[2]</td>
                                <td>@p[3]</td>
                                <td>@p[4]</td>
                                <td>@p[5]</td>
                                <td>@p[6]</td>
                                <td>@p[7]</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>@p[0]</td>
                                <td>@p[2]</td>
                                <td>@p[3]</td>
                                <td>@p[4]</td>
                                <td>@p[5]</td>
                                <td>@p[6]</td>
                                <td>@p[7]</td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
        <div style="text-align:center">
            <a asp-controller="Home" asp-action="DownloadSped" asp-route-id="@Model.Id" asp-route-year="@ViewBag.Year" asp-route-month="@ViewBag.Month">Fazer Download do Arquivo</a>
        </div>
    </div>
</div>
