@model Escon.SisctNET.Model.Company

@{
    ViewData["Title"] = "Sped";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <a asp-controller="Home" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
            <h3 class="box-title"> <strong>Corrigir Sped:</strong> @Html.DisplayFor(model => model.SocialName) - @Html.DisplayFor(model => model.Document) </h3>

        </div>
        <div class="box-body">
            <div class="col-lg-12">
                <form asp-controller="Home" asp-action="Sped" method="post"  enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="id" value="@Html.DisplayFor(model => model.Id)" />
                    <div class="row">
                        <div class="form-group col-lg-12 col-md-12 col-xs-12">
                            <label class="control-label"><strong>Selecione o arquivo</strong></label>
                            <input type="file" class="form-control" name="arquivo" id="arquivo" accept=".txt" required />
                        </div>
                    </div>

                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <input type="submit" value="Corrigir" class="btn btn-success pull-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>

