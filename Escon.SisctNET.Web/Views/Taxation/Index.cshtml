@model IEnumerable<Escon.SisctNET.Model.Taxation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">

        <a asp-controller="Company" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>

        <h3 class="box-title"><strong>Ncms Tributados</strong></h3>

        <div style="width:100%; text-align:center;">
            <strong>@ViewBag.Company-@ViewBag.Document</strong>
        </div>
        <br />
    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered" id="tblTaxation" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ncm)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.TaxationTypeId)</th>
                        <th>@Html.DisplayNameFor(model => model.AliqInterna)</th>
                        <th>@Html.DisplayNameFor(model => model.MVA)</th>
                        <th>@Html.DisplayNameFor(model => model.BCR)</th>
                        <th>@Html.DisplayNameFor(model => model.Picms)</th>
                        <th>@Html.DisplayNameFor(model => model.Uf)</th>
                        <th>@Html.DisplayNameFor(model => model.DateStart)</th>
                        <th>@Html.DisplayNameFor(model => model.DateEnd)</th>

                        @if (SessionManager.GetPersonInSession().Profile.Name.Equals("Master"))
                        {
                            <th></th>
                        }

                    </tr>
                </thead>
            </table>

        </div>
    </div>
    <div class="box-footer"></div>
</div>

@if (SessionManager.GetPersonInSession().Profile.Name.Equals("Master"))
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblTaxation').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "ajax": "/Taxation/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "code" },
                    { "data": "description" },
                    { "data": "aliqInterna" },
                    { "data": "mva" },
                    { "data": "bcr" },
                    { "data": "picms" },
                    { "data": "uf" },
                    { "data": "inicio" },
                    {
                        
                        "mData": "fim",
                        "mRender": function (data, type, row) {
                            if (data == "01/01/0001") {
                                return ""
                            }
                            else {
                                return data
                            }
                        }
                    },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            return "<a href='/Taxation/Delete/" + data + "' class = 'glyphicon glyphicon-trash pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Cfop' /> "
                        }
                    }
                ]
            });
        });
    </script>
}
else
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblTaxation').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "ajax": "/Taxation/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "code" },
                    { "data": "description" },
                    { "data": "aliqInterna" },
                    { "data": "mva" },
                    { "data": "bcr" },
                    { "data": "picms" },
                    { "data": "uf" },
                    { "data": "inicio" },
                    {
                        
                        "mData": "fim",
                        "mRender": function (data, type, row) {
                            if (data == "01/01/0001") {
                                return ""
                            }
                            else {
                                return data
                            }
                        }
                    }
                ]
            });
        });
    </script>
}
