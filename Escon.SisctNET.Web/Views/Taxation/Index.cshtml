@model IEnumerable<Escon.SisctNET.Model.Taxation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">

        <a asp-controller="Company" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>

        <h3 class="box-title"><strong>Ncms Tributados</strong></h3>

        <div style="width:100%; text-align:center;">
            <strong>@ViewBag.Company-@ViewBag.Document</strong>
        </div>
        <br />
    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ncm)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.TaxationTypeId)</th>
                        <th>@Html.DisplayNameFor(model => model.AliqInterna)</th>
                        <th>@Html.DisplayNameFor(model => model.MVA)</th>
                        <th>@Html.DisplayNameFor(model => model.BCR)</th>
                        <th>@Html.DisplayNameFor(model => model.Picms)</th>
                        <th>@Html.DisplayNameFor(model => model.Uf)</th>
                        <th>@Html.DisplayNameFor(model => model.DateStart)</th>
                        <th>@Html.DisplayNameFor(model => model.DateEnd)</th>

                        @if (SessionManager.GetPersonInSession().Profile.Name.Equals("Master"))
                        {
                            <th></th>
                        }

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Ncm.Code
                            </td>
                            <td>@item.TaxationType.Description</td>
                            <td>@Html.DisplayFor(modelItem => item.AliqInterna)</td>
                            <td>@Html.DisplayFor(modelItem => item.MVA)</td>
                            <td>@Html.DisplayFor(modelItem => item.BCR)</td>
                            <td>@Html.DisplayFor(modelItem => item.Picms)</td>
                            <td>@Html.DisplayFor(modelItem => item.Uf)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateStart)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateEnd)</td>

                            @if (SessionManager.GetPersonInSession().Profile.Name.Equals("Master"))
                            {
                                <td>
                                @Html.ActionLink(" ", "Delete", new { id = item.Id },
                                       new { onclick = "return confirm('Deseja exluir esse registro?');", @class = "glyphicon glyphicon-trash pull-left", @style = "margin-left:10px; margin-bottom:10px;" })
                            </td>
                            }
                        
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="box-footer"></div>
</div>