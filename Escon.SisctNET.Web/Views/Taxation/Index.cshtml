@model IEnumerable<Escon.SisctNET.Model.Taxation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        @if (SessionManager.GetPersonInSession().ProfileId.Equals(1) || SessionManager.GetPersonInSession().ProfileId.Equals(2) || SessionManager.GetPersonInSession().ProfileId.Equals(4))
        {
            <a asp-controller="Company" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        }

        <h3 class="box-title"><strong>Tributações</strong></h3>

        <div style="width:100%; text-align:center;">
            <strong>@ViewBag.Company-@ViewBag.Document</strong>
        </div>
        <br />
    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ncm)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.Picms)</th>
                        <th>@Html.DisplayNameFor(model => model.Uf)</th>
                        <th>@Html.DisplayNameFor(model => model.DateStart)</th>
                        <th>@Html.DisplayNameFor(model => model.DateEnd)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @item.Ncm.Code
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Picms)</td>
                        <td>@Html.DisplayFor(modelItem => item.Uf)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateStart)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateEnd)</td>
                        <td></td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="box-footer"></div>
</div>