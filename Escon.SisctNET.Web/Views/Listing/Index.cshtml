
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <div style="width:100%; overflow:hidden; padding:20px;">
            <div class="row">
                <div class="col-lg-12">
                    <img src="~/img/sisCT.png" style="width:25%; height:60%; float:left;" />
                    <img src="~/img/escon.png" style="width:20%; height:50%; float:right;" />
                </div>
            </div>

        </div>

        <div style="text-align:center;">
            <strong>@ViewBag.Company.SocialName</strong> <br />
            <b>CNPJ: </b>@ViewBag.Company.Document <b>Insc. Estadual: </b> @ViewBag.Company.Ie
        </div>

        <div style="width:100%; overflow:hidden; padding:20px;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group col-lg-6 col-md-6 col-xs-12">
                        @await Html.PartialAsync("_ReportTypeName", new ViewDataDictionary(ViewData))
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-xs-12" style="text-align:right;">
                        <strong>Periodo: @SessionManager.GetMonthInSession()/@SessionManager.GetYearInSession()</strong>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="box-body">
        <div style="width:100%; padding:10px;">
            <table class="table" style="border:1px solid">
                <thead>
                    <tr>
                        <th style="border:1px solid; text-align:center;">
                            Produto
                        </th>
                        <th style="border:1px solid; text-align:center;">
                            CFOP
                        </th>
                        <th style="border:1px solid; text-align:center;">
                            Valor Contábil
                        </th>
                        <th style="border:1px solid; text-align:center;">
                            BC ICMS
                        </th>
                        <th style="border:1px solid; text-align:center;">
                            Aliq. ICMS
                        </th>
                        <th style="border:1px solid; text-align:center;">
                            Valor ICMS
                        </th>
                        <th style="border:1px solid; text-align:center;">
                            Aliq. FECOP
                        </th>
                        <th style="border:1px solid; text-align:center;">
                            Valor FECOP
                        </th>
                    </tr>
                </thead>

                @if (SessionManager.GetTipoInSession().Equals(0))
                {
                    @await Html.PartialAsync("_Entry", new ViewDataDictionary(ViewData))
                }
                else
                {
                    @await Html.PartialAsync("_Exit", new ViewDataDictionary(ViewData))
                }
            </table>
            <div class="col-lg-12">
                <h6>
                    <strong>
                        @ViewBag.Products.Count registro(s)
                    </strong>
                </h6>
            </div>
        </div>
    </div>
</div>

