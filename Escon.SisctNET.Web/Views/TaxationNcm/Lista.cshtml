@model IEnumerable<Escon.SisctNET.Model.TaxationNcm>

@{
    ViewData["Title"] = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <div style="width:100%; overflow:hidden; padding:20px;">
            <div>
                <img src="~/img/sisCT.png" style="width:25%; height:60%; float:left;" />
                <img src="~/img/escon.png" style="width:20%; height:50%; float:right;" />
            </div>
        </div>

        <div style="text-align:center;">
            <strong>@ViewBag.Company.SocialName</strong> <br />
            <b>CNPJ: </b>@ViewBag.Company.Document <b>Insc. Estadual: </b> @ViewBag.Company.Ie
        </div>
        <div style="width:100%; padding:20px;">
            <div style="float:left;"><strong>Ncm Monofásico</strong></div>
            <div style="float:right;"><strong>Data:</strong>@DateTime.Now.ToString("dd/MM/yyyy")</div>
        </div>
    </div>
    <div class="box-body">
        <div style="width:100%;font-size:11px; padding:20px;">
            <table class="table" style="border:1px solid;">
                <thead>
                    <tr style="border:1px solid;">
                        @if (ViewBag.Company.Taxation)
                        {
                            <th style="border:1px solid; text-align:center;">
                                Produto
                            </th>
                        }
                        <th style="border:1px solid; text-align:center;">
                            Ncm
                        </th>
                    </tr>
                </thead>
                <tbody style="font-size:10px;">
                    @if (ViewBag.Company.Taxation)
                    {
                        @foreach (var item in Model)
                        {
                            <tr style="border:1px solid;">
                                <td style="border:1px solid; padding-left:1%;">
                                    @item.CodeProduct - @item.Product
                                </td>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item.Ncm.Description
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        @foreach (var item in ViewBag.Ncms)
                        {
                            <tr style="border:1px solid;">
                                <td style="border:1px solid; padding-left:1%;">
                                    @item.Description
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="box-footer"></div>
</div>
