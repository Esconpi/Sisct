@model IEnumerable<Escon.SisctNET.Model.TaxationNcm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <a asp-controller="HomeExit" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
            <h3 class="box-title"><strong>Ncm</strong></h3>
            <div class="btn-group pull-right">
                @Html.ActionLink(" Importar", "Import", new { id = @ViewBag.CompanyId, year = @ViewBag.Year, month = @ViewBag.Month, type = @ViewBag.Type },
                                       new { onclick = "return confirm('Os arquivos estão na pasta ?');", @class = "btn btn-primary fa fa-cloud-download pull-left" })

            </div>
            <div style="width:100%; text-align:center;">
                <strong>@ViewBag.Name - @ViewBag.Document</strong>
            </div>
        </div>
        <div class="box-body">
            <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

                <table class="table table-striped table-bordered" id="tblIndex2" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Código do Produto
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ncm.Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ncm.Description)
                            </th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodeProduct)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ncm.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ncm.Description)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(modelItem => item.Status, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "success", @data_offstyle = "danger", @readonly = "true", @id = item.Id, @disabled = true })
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "Ncm", new {companyId =  ViewBag.CompanyId,year = ViewBag.Year, month =  ViewBag.Month, id = item.Id }, new { @class = "fa fa-calculator", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Tributar Ncm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div class="box-footer"></div>
    </div>