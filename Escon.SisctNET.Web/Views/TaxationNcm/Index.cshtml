@model IEnumerable<Escon.SisctNET.Model.TaxationNcm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="HomeExit" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Ncm</strong></h3>
        <div class="btn-group pull-right">
            @Html.ActionLink(" Importar", "Import", new { id = @ViewBag.CompanyId, year = @ViewBag.Year, month = @ViewBag.Month },
                                   new { onclick = "return confirm('Os arquivos estão na pasta ?');", @class = "btn btn-primary fa fa-cloud-download pull-left" })

        </div>
        <div style="width:100%; text-align:center;">
            <strong>@ViewBag.Name - @ViewBag.Document</strong>
        </div>
    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

            <table class="table table-striped table-bordered" id="tblNcm" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Produto
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ncm.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ncm.Description)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>Tipo</th>
                        <th></th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>
    <div class="box-footer"></div>
</div>

<script type="text/javascript">
        $(document).ready(function () {
            $('#tblNcm').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "oLanguage": {
                    "sProcessing": "Aguarde enquanto os dados são carregados ...",
                    "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                    "sZeroRecords": "Nenhum registro disponível",
                    "sInfoEmpty": "Exibindo 0 a 0 de 0 registros",
                    "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                    "sInfoFiltered": "",
                    "sSearch": "Buscar",
                    "oPaginate": {
                        "sFirst": "Primeiro",
                        "sPrevious": "Anterior",
                        "sNext": "Próximo",
                        "sLast": "Último"
                    }
                },
                "ajax": "/TaxationNcm/GetAllCompany",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "codeProd" },
                    { "data": "code" },
                    { "data": "description" },
                    {
                        "mData": "status",
                        "mRender": function (data, type, row) {
                            if (data == true) {
                                return "<input type='checkbox' data-off='Não' data-on='Sim' checked='" + data + "' data-toggle='toggle' data-size='small' data-offstyle = 'danger', data-onstyle = 'success' , disabled = 'true' id='" + row.id + "' />";
                            }
                            else {
                                return "<input type='checkbox' data-off='Não' data-on='Sim' data-toggle='toggle' data-size='small' data-offstyle = 'danger', data-onstyle = 'success' , disabled = 'true' id='" + row.id + "' />";
                            }
                        }
                    },
                    { "data": "tipo" },
 
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            return "<a href='/TaxationNcm/Ncm/" + data + "' class = 'fa fa-calculator pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Tributar Ncm' /> "
                        }
                    }
                ]
            });
        });
</script>