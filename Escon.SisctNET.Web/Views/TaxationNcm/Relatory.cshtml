@{
    ViewData["Title"] = "Relatory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <div style="width:100%; overflow:hidden; padding:20px;">
            <div>
                <img src="~/img/sisCT.png" style="width:25%; height:60%; float:left;" />
                <img src="~/img/escon.png" style="width:20%; height:50%; float:right;" />
            </div>
        </div>

        <div style="text-align:center;">
            <strong>@ViewBag.Company.SocialName</strong> <br />
            <b>CNPJ: </b>@ViewBag.Company.Document <b>Insc. Estadual: </b> @ViewBag.Company.Ie
        </div>
        <div style="width:100%; padding:20px;">
            <div style="float:left;"><strong>Tributação Divergente (PIS/COFINS)</strong></div>
            <div style="float:right;"><strong>Perido:</strong> @ViewBag.Inicio.ToString("dd/MM/yyyy") à @ViewBag.Fim.ToString("dd/MM/yyyy")</div>
        </div>
    </div>
    <div class="box-body">
        <div style="width:100%;font-size:11px; padding:10px;">
            @if (ViewBag.Erro == 1)
            {
                <p style="text-align:center;color:red;"><strong>Há Produto não Tributado</strong></p>
            }
            else if (ViewBag.Erro == 2)
            {
                <p style="text-align:center;color:red;"><strong>O NCM @ViewBag.Ncm não estar Cadastrado na Tabela Geral</strong></p>
            }
            else
            {
                <table class="table" style="border:1px solid;">
                    <thead>
                        <tr style="border:1px solid;">
                            <th style="border:1px solid; text-align:center;" width="10%">
                                Produto
                            </th>
                            <th style="border:1px solid; text-align:center;" width="25%">
                                Descrição
                            </th>
                            <th style="border:1px solid; text-align:center;">Origem</th>
                            <th style="border:1px solid; text-align:center;" width="10%">
                                Ncm
                            </th>
                            <th style="border:1px solid; text-align:center;" width="40%">
                                Descrição
                            </th>
                            <th style="border:1px solid; text-align:center;">
                                CST
                            </th>
                            <th style="border:1px solid; text-align:center;">
                                Nat. Receita
                            </th>
                        </tr>
                    </thead>
                    <tbody style="font-size:10px;">
                        @foreach (var item in ViewBag.Divergentes)
                        {
                            <tr style="border:1px solid;">
                                <td style="border:1px solid; padding-left:1%;" rowspan="2">
                                    @item[0]
                                </td>
                                <td style="border:1px solid; padding-left:1%;" rowspan="2">
                                    @item[1]
                                </td>
                                <th style="border:1px solid; padding-left:1%;">
                                    XML
                                </th>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item[2]
                                </td>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item[3]
                                </td>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item[4]
                                </td>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item[5]
                                </td>
                            </tr>
                            <tr>
                                <th style="border:1px solid; padding-left:1%;">
                                    FORTES
                                </th>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item[6]
                                </td>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item[7]
                                </td>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item[8]
                                </td>
                                <td style="border:1px solid; padding-left:1%;">
                                    @item[9]
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div class="box-footer"></div>
</div>


