@model IEnumerable<Escon.SisctNET.Model.TaxationNcm>

@{
    ViewData["Title"] = "IndexAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title"><strong>Ncm Monofásico</strong></h3>
        </div>
        <div class="box-body">
            <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

                <table class="table table-striped table-bordered" id="tblNcm" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Produto
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ncm.Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ncm.Description)
                            </th>
                            <th>@Html.DisplayNameFor(model => model.DateStart)</th>
                            <th>@Html.DisplayNameFor(model => model.DateEnd)</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
        <div class="box-footer"></div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblNcm').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "ajax": "/TaxationNcm/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "codeProd" },
                    { "data": "code" },
                    { "data": "description" },
                    {
                        "mData": "inicio",
                        "mRender": function (data, type, row) {
                            if (data == "01/01/0001") {
                                return ""
                            }
                            else {
                                return data
                            }
                        }
                    },
                    {
                        "mData": "fim",
                        "mRender": function (data, type, row) {
                            if (data == "01/01/0001") {
                                return ""
                            }
                            else {
                                return data
                            }
                        }
                    },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            if (row.fim == "01/01/0001") {
                                return "<a href='/TaxationNcm/Atualize/" + data + "' class = 'glyphicon glyphicon-refresh pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Atualizar Ncm' /> " +
                                    "<a href='/TaxationNcm/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Ncm' /> "
                            }
                            else {
                                return ""
                            }
                        }
                    }
                ]
            });
        });
    </script>
