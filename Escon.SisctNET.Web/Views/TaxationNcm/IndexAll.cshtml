@model IEnumerable<Escon.SisctNET.Model.TaxationNcm>

@{
    ViewData["Title"] = "IndexAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="HomeExit" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Ncm</strong></h3>
        <div class="btn-group pull-right">
            <a asp-action="Lista" size="large" class="btn btn-primary">
                <i class="fa fa-file"></i>
                Monofásico
            </a>
            <a asp-action="Compare" size="large" class="btn btn-primary"> 
                <i class="fa fa-copy"></i>
                Compara
            </a>
            <a asp-action="Import" size="large" class="btn btn-primary"> 
                <i class="fa fa-cloud-upload"></i>
                Importar
            </a>
        </div>
        <br />
        <br />
        <div style="width:100%; text-align:center;">
            <strong>@ViewBag.Company.SocialName</strong> <br />
            <b>CNPJ: </b>@ViewBag.Company.Document <b>Insc. Estadual: </b> @ViewBag.Company.Ie
        </div>
    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

            <table class="table table-striped table-bordered" id="tblNcm" style="width:100%">
                <thead>
                    <tr>
                        @if (ViewBag.Company.Taxation)
                        {
                            <th>
                                Produto
                            </th>
                            <th>
                                NCM
                            </th>
                            <th>Tributado</th>
                            <th>
                                Tipo Tributação
                            </th>
                            <th></th>
                        }
                        else
                        {
                            <th>
                                NCM
                            </th>
                            <th>Tributado</th>
                            <th>
                                Tipo Tributação
                            </th>
                            <th></th>
                        }

                    </tr>
                </thead>
            </table>

        </div>
    </div>
    <div class="box-footer"></div>
</div>

<div class="modal modal-default fade in" id="formShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4><strong>Detalhe</strong></h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Company.Taxation)
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblNcm').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                    $('.showDetails').click(function () {
                        $.get('/TaxationNcm/Details/' + $(this).attr('id'), function (html) {
                            $('#formShow .modal-body').empty();
                            $('#formShow .modal-body').append($(html));
                            $('#formShow').modal('show');
                        });

                    });
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "oLanguage": {
                    "sProcessing": "Aguarde enquanto os dados são carregados ...",
                    "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                    "sZeroRecords": "Nenhum registro disponível",
                    "sInfoEmpty": "Exibindo 0 a 0 de 0 registros",
                    "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                    "sInfoFiltered": "",
                    "sSearch": "Buscar",
                    "oPaginate": {
                        "sFirst": "Primeiro",
                        "sPrevious": "Anterior",
                        "sNext": "Próximo",
                        "sLast": "Último"
                    }
                },
                "ajax": "/TaxationNcm/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "product" },
                    { "data": "ncm" },
                    {
                        "mData": "status",
                        "mRender": function (data, type, row) {
                            if (data == true) {
                                return "<input type='checkbox' data-off='Não' data-on='Sim' checked='" + data + "' data-toggle='toggle' data-size='small' data-offstyle = 'danger' data-onstyle = 'success' disabled = 'true' id='" + row.id + "' />";
                            }
                            else {
                                return "<input type='checkbox' data-off='Não' data-on='Sim' data-toggle='toggle' data-size='small' data-offstyle = 'danger' data-onstyle = 'success' disabled = 'true' id='" + row.id + "' />";

                            }
                        }
                    },
                    {
                        "mData": "type",
                        "mRender": function (data, type, row) {
                            if (data == "Nenhum") {
                                return "<div style='color:red'>Nenhum</div>"
                            }
                            else if (data == "Monofásico") {
                                return "<div style='color:green'>Monofásico</div>"
                            }
                            else if (data == "Normal") {
                                return "<div style='color:blue'>Normal</div>"
                            }
                        }
                    },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            if (row.fim == "01/01/0001") {
                                return "<a href='#" + data + "' class = 'showDetails glyphicon glyphicon-list-alt pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Detalhes' id='" + row.id + "' /> " +
                                    "<a href='/TaxationNcm/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Ncm' /> " +
                                    "<a href='/TaxationNcm/Atualize/" + data + "' class = 'glyphicon glyphicon-refresh pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Atualizar Ncm' /> "
                            }
                            else {
                                return "<a href='#" + data + "' class = 'showDetails glyphicon glyphicon-list-alt pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Detalhes' id='" + row.id + "' /> "
                            }
                        }
                    }
                ]
            });
        });
    </script>
}
