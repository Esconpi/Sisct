@model Escon.SisctNET.Model.Company

@{
    ViewData["Title"] = "Compare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="TaxationNcm" asp-action="IndexAll" asp-route-id="@SessionManager.GetCompanyIdInSession()"  size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"> <strong>Compara Tributação PIS/COFINS:</strong> @Html.DisplayFor(model => model.SocialName) - @Html.DisplayFor(model => model.Document)</h3>
    </div>
    <div class="box-body">
        <div class="col-lg-12">
            <form  asp-action="Relatory" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label class="control-label">Inicio</label>
                        <input type="date" class="form-control" name="inicio" required />
                    </div>
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label class="control-label">Fim</label>
                        <input type="date" class="form-control" name="fim" required />
                    </div>
                    <div class="form-group col-lg-8 col-md-12 col-xs-12">
                        <label class="control-label"><strong>Selecione o arquivo Excel</strong></label>
                        <input type="file" class="form-control" name="arquivo" id="arquivo" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" required multiple />
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Compara" class="btn btn-success pull-right"/>
                </div>
            </form>
        </div>

    </div>
</div>

