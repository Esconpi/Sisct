@model Escon.SisctNET.Model.Aliquot

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Novo Aliquota</strong>
        </h3>

    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-lg-4 col-md-6 col-xs-12">
                        <label asp-for="StateOrigemId" class="control-label"></label>
                        <select asp-items="@ViewBag.StateOrigemId" name="StateOrigemId" class="form-control selectoption" id="stateOrigem"></select>
                        <span asp-validation-for="StateOrigemId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-md-6 col-xs-12">
                        <label asp-for="StateDestinoId" class="control-label"></label>
                        <select asp-items="@ViewBag.StateDestinoId" name="StateDestinoId" class="form-control selectoption" id="stateDestino"></select>
                        <span asp-validation-for="StateDestinoId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label asp-for="Aliquota" class="control-label"></label>
                        <input type="text" id="aliquota" name="aliquota" class="form-control money" value="@Model.Aliquota" required />
                    </div>

                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label asp-for="DateStart" class="control-label"></label>
                        <input asp-for="DateStart" class="form-control" />
                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Confirmar" class="btn btn-success pull-right" />
                </div>

            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>

<script type="text/javascript">
    var stateOrigem = @Model.StateOrigemId;
    $("#stateOrigem").children('option').each(function () {
        if ($(this).val() == stateOrigem) {
            $(this).attr('selected', true);
        }
    });

    var stateDestino = @Model.StateDestinoId;
    $("#stateDestino").children('option').each(function () {
        if ($(this).val() == stateDestino) {
            $(this).attr('selected', true);
        }
    });
</script>
