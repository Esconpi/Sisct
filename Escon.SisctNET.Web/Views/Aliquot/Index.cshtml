@model IEnumerable<Escon.SisctNET.Model.Aliquot>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title"><strong>Aliquota Estado</strong></h3>

            <div class="btn-group pull-right">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fa fa-plus"></i>
                    Nova Aliquota
                </a>
            </div>

        </div>
        <div class="box-body">
            <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

                <table class="table table-striped table-bordered" id="tblAliquot" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.StateOrigemId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StateDestinoId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Aliquota)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.DateStart)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateEnd)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
        <div class="box-footer"></div>
    </div>

    <script type="text/javascript">
    $(document).ready(function () {
        $('#tblAliquot').DataTable({
            searchDelay: 300,
            "fnDrawCallback": function (oSettings) {
                $('.showDetail').off();
                $('.showProduct').off();
                $('[data-toggle="tooltip"]').tooltip();
                $("input[type='checkbox']").bootstrapToggle();
            },
            "processing": true,
            "ordering": false,
            "serverSide": true,
            "oLanguage": {
                "sProcessing": "Aguarde enquanto os dados são carregados ...",
                "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                "sZeroRecords": "Nenhum registro disponível",
                "sInfoEmpty": "Exibindo 0 a 0 de 0 registros",
                "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                "sInfoFiltered": "",
                "sSearch": "Buscar",
                "oPaginate": {
                    "sFirst": "Primeiro",
                    "sPrevious": "Anterior",
                    "sNext": "Próximo",
                    "sLast": "Último"
                }
            },
            "ajax": "/Aliquot/GetAll",
            "initComplete": function (settings, json) {
            },
            "columns": [
                { "data": "stateOrigem" },
                { "data": "stateDestino" },
                {
                    "mData": "aliquota",
                    "mRender": function (data, type, row) {
                        return data.toFixed(2).toString().replace(',', '*').replace('.', ',').replace('*', '.')
                    }
                },
                { "data": "inicio" },
                {
                    "mData": "fim",
                    "mRender": function (data, type, row) {
                        if (data == "01/01/0001") {
                            return ""
                        }
                        else {
                            return data
                        }
                    }
                },
                {
                    "mData": "id",
                    "mRender": function (data, type, row) {
                        return "<a href='/Aliquot/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Aliquota' /> " +
                            "<a href='/Aliquot/Delete/" + data + "' class = 'glyphicon glyphicon-trash pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Deletar Aliquota' /> " 
                    }
                }
            ]
        });
    });
    </script>