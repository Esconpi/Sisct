            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.Devolucao2Entrada) + Convert.ToDecimal(Model.Devolucao2Saida))
