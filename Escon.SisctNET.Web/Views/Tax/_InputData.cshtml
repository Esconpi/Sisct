@model Escon.SisctNET.Model.Tax


@if (ViewBag.Company.Annex.Description.Equals("ANEXO II - AUTOPEÇAS"))
{
    <tr>
        <th style="text-align:center;border:1px solid;" colspan="5">
            VENDAS
        </th>
        <th style="text-align:center;border:1px solid;" colspan="5">
            DEVOLUÇÕES
        </th>
    </tr>
}
else
{
    <tr>
        <th style="text-align:center;border:1px solid;" colspan="4">
            VENDAS
        </th>
        <th style="text-align:center;border:1px solid;" colspan="4">
            DEVOLUÇÕES
        </th>
    </tr>
}

<tr>
    <th style="text-align:center;border:1px solid;">
        TOTAL
    </th>
    <th style="text-align:center;border:1px solid;">
        CONTRIBUINTE
    </th>
    <th style="text-align:center;border:1px solid;">
        P/ NÃO CONTRIBUINTE
    </th>
    @if (ViewBag.Company.Annex.Description.Equals("ANEXO II - AUTOPEÇAS"))
    {
        <th style="text-align:center;border:1px solid;">
            DO ANEXO II
        </th>
    }
    @if (ViewBag.Company.Chapter.Name.Equals("CAPÍTULO IV-C"))
    {
        <th style="text-align:center;border:1px solid;">
            DO INCISO I e II
        </th>
    }
    <th style="text-align:center;border:1px solid;">
        P/ GRUPO MAIOR QUE @ViewBag.Company.VendaMGrupo %
    </th>
    <th style="text-align:center;border:1px solid;">
        TOTAL
    </th>
    <th style="text-align:center;border:1px solid;">
        CONTRIBUINTE
    </th>
    <th style="text-align:center;border:1px solid;">
        P/ NÃO CONTRIBUINTE
    </th>
    @if (ViewBag.Company.Annex.Description.Equals("ANEXO II - AUTOPEÇAS"))
    {
        <th style="text-align:center;border:1px solid;">
            DO ANEXO II
        </th>
    }
    @if (ViewBag.Company.Chapter.Name.Equals("CAPÍTULO IV-C"))
    {
        <th style="text-align:center;border:1px solid;">
            DO INCISO I e II
        </th>
    }
    <th style="text-align:center;border:1px solid;">
        P/ GRUPO MAIOR QUE @ViewBag.Company.VendaMGrupo %
    </th>

</tr>

<tr style="font-size:11px;">
    <td style="text-align:right;border:1px solid;padding-right:1%;">
        @if (Model != null)
        {
            @string.Format("{0:N}", Convert.ToDecimal(Model.Vendas))
        }
    </td>
    <td style="text-align:right;border:1px solid;padding-right:1%;">
        @if (Model != null)
        {
            @string.Format("{0:N}", Convert.ToDecimal(Model.Vendas) - Convert.ToDecimal(Model.VendasNContribuinte))
        }
    </td>
    <td style="text-align:right;border:1px solid;padding-right:1%;">
        @if (Model != null)
        {
            @string.Format("{0:N}", Convert.ToDecimal(Model.VendasNContribuinte))
        }
    </td>
    @if (ViewBag.Company.Annex.Description.Equals("ANEXO II - AUTOPEÇAS") || ViewBag.Company.Chapter.Name.Equals("CAPÍTULO IV-C"))
    {
        <td style="text-align:right;border:1px solid;padding-right:1%;">
            @if (Model != null)
            {
                @string.Format("{0:N}", Convert.ToDecimal(Model.VendasNcm))
            }
        </td>
    }
    <td style="text-align:right;border:1px solid;padding-right:1%;">
        @if (Model != null)
        {
            @string.Format("{0:N}", ViewBag.VendasGrupo)
        }
    </td>
    <td style="text-align:right;border:1px solid;padding-right:1%;">
        @if (Model != null)
        {
            @string.Format("{0:N}", Convert.ToDecimal(Model.DevolucaoVendas))
        }
    </td>
    <td style="text-align:right;border:1px solid;padding-right:1%;">
        @if (Model != null)
        {
            @string.Format("{0:N}", Convert.ToDecimal(Model.DevolucaoVendas) - Convert.ToDecimal(Model.DevolucaoNContribuinte))
        }
    </td>
    <td style="text-align:right;border:1px solid;padding-right:1%;">
        @if (Model != null)
        {
            @string.Format("{0:N}", Convert.ToDecimal(Model.DevolucaoNContribuinte))
        }
    </td>
    @if (ViewBag.Company.Annex.Description.Equals("ANEXO II - AUTOPEÇAS") || ViewBag.Company.Chapter.Name.Equals("CAPÍTULO IV-C"))
    {
        <td style="text-align:right;border:1px solid;padding-right:1%;">
            @if (Model != null)
            {
                @string.Format("{0:N}", Convert.ToDecimal(Model.DevolucaoNcm))
            }
        </td>
    }
    <td style="text-align:right;border:1px solid;padding-right:1%;">
        @if (Model != null)
        {
            @string.Format("{0:N}", ViewBag.DevolucoesGrupo)
        }
    </td>
</tr>

