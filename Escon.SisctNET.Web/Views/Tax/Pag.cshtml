@model Escon.SisctNET.Model.Company

@{
    ViewData["Title"] = "Pag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="Tax" asp-action="Index" asp-route-id="@SessionManager.GetCompanyIdInSession()" asp-route-year="@SessionManager.GetYearInSession()" asp-route-month="@SessionManager.GetMonthInSession()" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>        
        <h3 class="box-title"> <strong>Adicionar Pagamentos:</strong> @Html.DisplayFor(model => model.SocialName) - @Html.DisplayFor(model => model.Document)</h3>
    </div>
    <div class="box-body">
        <div class="col-lg-12">
            <form asp-action="Pag" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-lg-4 col-md-6 col-xs-12">
                        <label class="control-label">Mês</label>
                        <select name="mesRef" class="form-control selectoption">
                            @foreach (var m in ViewBag.Meses)
                            {
                                <option value="@m">@m</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-lg-4 col-md-6 col-xs-12">
                        <label class="control-label">IRPJ Pago</label>
                        <input class="form-control money" name="IrpjPago">
                    </div>
                    <div class="form-group col-lg-4 col-md-6 col-xs-12">
                        <label class="control-label">CSLL Pago</label>
                        <input class="form-control money" name="CsllPago">
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Adicionar" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>

    </div>
</div>

