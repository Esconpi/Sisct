@model Escon.SisctNET.Model.Tax

<table class="table" style="font-size:11px;">
    <thead>
        <tr>
            <th style="text-align:center;border:1px solid;" colspan="4">
                RETENÇÕES
            </th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <th style="text-align:center;border:1px solid;" colspan="2">
                PIS
            </th>
            <th style="text-align:center;border:1px solid;" colspan="2">
                COFINS
            </th>
        </tr>
        <tr>
            <th style="text-align:center;border:1px solid;">
                RETIDO
            </th>
            <th style="text-align:center;border:1px solid;">
                SALDO CREDOR
            </th>
            <th style="text-align:center;border:1px solid;">
                RETIDO
            </th>
            <th style="text-align:center;border:1px solid;">
                SALDO CREDOR
            </th>
        </tr>
        <tr>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.PisRetido))
                }
            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.SaldoCredorPis))
                }
            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.CofinsRetido))
                }
            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.SaldoCredorCofins))
                }
            </td>
        </tr>
    </tbody>
</table>