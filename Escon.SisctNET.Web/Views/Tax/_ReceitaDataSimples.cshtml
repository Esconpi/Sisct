@model Escon.SisctNET.Model.Tax

<table class="table" style="font-size:11px;">
    <thead>
        <tr>
            <th style="text-align:center;border:1px solid;" colspan="6">
                DADOS
            </th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <th style="text-align:center;border:1px solid;" colspan="3">VENDAS</th>
            <th style="text-align:center;border:1px solid;" colspan="3">DEVOLUÇÕES</th>
        </tr>

        <tr>
            <th style="text-align:center;border:1px solid;">
                NORMAL
            </th>
            <th style="text-align:center;border:1px solid;">
                SUBSTITUIÇÃO/NORMAL
            </th>
            <th style="text-align:center;border:1px solid;">
                SUBSTITUIÇÃO/MONOFÁSICO
            </th>
            <th style="text-align:center;border:1px solid;">
                NORMAL
            </th>
            <th style="text-align:center;border:1px solid;">
                SUBSTITUIÇÃO/NORMAL
            </th>
            <th style="text-align:center;border:1px solid;">
                SUBSTITUIÇÃO/MONOFÁSICO
            </th>
        </tr>

        <tr>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.VendaNormal))
                }
            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.VendaST))
                }
            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.VendaMonofasico))
                }
            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.DevoNormal))
                }
            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.DevoST))
                }
            </td>
            <td style="text-align:right;border:1px solid;padding-right:1%;">
                @if (Model != null)
                {
                    @string.Format("{0:N}", Convert.ToDecimal(Model.DevoMonofasico))
                }
            </td>
        </tr>
    </tbody>
</table>