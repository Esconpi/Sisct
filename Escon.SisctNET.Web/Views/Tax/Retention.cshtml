@model Escon.SisctNET.Model.Company

@{
    ViewData["Title"] = "Retention";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="Tax" asp-action="Index" asp-route-id="@ViewBag.Id" asp-route-year="@ViewBag.Year" asp-route-month="@ViewBag.Month" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"> <strong>Adicionar CSLL e IRPJ:</strong> @Html.DisplayFor(model => model.SocialName) - @Html.DisplayFor(model => model.Document)</h3>
    </div>
    <div class="box-body">
        <div class="col-lg-12">
            <form asp-controller="Tax" asp-action="Retention" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="companyid" value="@Html.DisplayFor(model => model.Id)" />
                <input type="hidden" name="year" value="@ViewBag.Year" />
                <input type="hidden" name="month" value="@ViewBag.Month" />
                <div class="row">
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label class="control-label">CSLL Retido</label>
                        <input class="form-control money" name="csll">
                    </div>

                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label class="control-label">CSLL Fonte</label>
                        <input class="form-control money" name="csllFonte">
                    </div>

                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label class="control-label">IRPJ Retido</label>
                        <input class="form-control money" name="irpj">
                    </div>

                    <div class="form-group col-lg-3 col-md-6 col-xs-12">
                        <label class="control-label">IRPJ Fonte Serviços</label>
                        <input class="form-control money" name="irpjFonteServico">
                    </div>

                    <div class="form-group col-lg-3 col-md-6 col-xs-12">
                        <label class="control-label">IRPJ Fonte Aplicações Financeiras</label>
                        <input class="form-control money" name="irpjFonteFinanceira">
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Adicionar" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>

    </div>
</div>