@model Escon.SisctNET.Model.Person

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Novo Usuário</strong>
        </h3>

    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
                
            <form asp-action="Create" id="formDefault">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" class="form-control" type="hidden" />
                <div class="row">
                    <div class="form-group col-lg-12 col-md-6 col-xs-12">
                        @Html.LabelFor(model => model.Active, "Ativo", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.Active, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "primary", @readonly = "true" })
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-lg-5 col-md-5 col-xs-12">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-xs-12">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control datepicker" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-3 col-md-3 col-xs-12">
                        <label asp-for="ProfileId" class="control-label"></label>
                        <select asp-items="@ViewBag.ProfileId" name="ProfileId" class="form-control selectoption"></select>
                        <span asp-validation-for="ProfileId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-2 col-md-2 col-xs-12">
                        <label asp-for="Document" class="control-label"></label>
                        <input asp-for="Document" class="form-control cpfformatmask" />
                        <span asp-validation-for="Document" class="text-danger"></span>
                    </div>
                    <div class="form-group  has-feedback col-lg-4 col-md-4 col-xs-12">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-3 col-md-3 col-xs-12">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" data-val="false" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-3 col-md-3 col-xs-12">
                        <label for="PasswordConfirm" class="control-label">Confirmar Senha</label>
                        <input id="PasswordConfirm" class="form-control" type="password" data-val="false" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Confirmar" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>

