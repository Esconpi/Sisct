@model Escon.SisctNET.Model.NcmConvenio

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Novo Ncm</strong>
        </h3>

    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label asp-for="Cest" class="control-label"></label>
                        <input asp-for="Cest" class="form-control number" />
                        <span asp-validation-for="Cest" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label asp-for="Ncm" class="control-label"></label>
                        <input asp-for="Ncm" class="form-control number" />
                        <span asp-validation-for="Ncm" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-8 col-md-6 col-xs-12">
                        <label asp-for="AnnexId" class="control-label"></label>
                        <select asp-items="@ViewBag.AnnexId" name="AnnexId" class="form-control selectoption"></select>
                        <span asp-validation-for="AnnexId" class="text-danger"></span>
                    </div>
                   
                </div>

                <div class="row">
                    <div class="form-group col-lg-12 col-md-6 col-xs-12">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Cadastrar" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>
