@model IEnumerable<Escon.SisctNET.Model.NcmConvenio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title"><strong>Ncm</strong></h3>
        <div class="btn-group pull-right">

            <a asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Novo Ncm
            </a>
        </div>

    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered display responsive nowrap" id="tblNcm" style="width:100%">
                <thead>
                    <tr>
                        <th class="none">
                            @Html.DisplayNameFor(model => model.AnnexId)
                        </th>
                        <th class="all">
                            @Html.DisplayNameFor(model => model.Ncm)
                        </th>
                        <th class="all">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th class="none">
                            @Html.DisplayNameFor(model => model.Cest)
                        </th>
                        <th class="all"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="box-footer"></div>
</div>
@if (SessionManager.GetPersonInSession().ProfileId.Equals(2))
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblNcm').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "oLanguage": {
                    "sProcessing": "Aguarde enquanto os dados são carregados ...",
                    "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                    "sZeroRecords": "Nenhum registro disponível",
                    "sInfoEmpty": "Exibindo 0 a 0 de 0 registros",
                    "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                    "sInfoFiltered": "",
                    "sSearch": "Buscar",
                    "oPaginate": {
                        "sFirst": "Primeiro",
                        "sPrevious": "Anterior",
                        "sNext": "Próximo",
                        "sLast": "Último"
                    }
                },
                "ajax": "/NcmConvenio/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "anexx" },
                    { "data": "code" },
                    { "data": "description" },
                    { "data": "cest" },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            return "<a href='/NcmConvenio/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top'/> "
                        }
                    }
                ]
            });
        });
    </script>
}
else
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblNcm').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "oLanguage": {
                    "sProcessing": "Aguarde enquanto os dados são carregados ...",
                    "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                    "sZeroRecords": "Nenhum registro disponível",
                    "sInfoEmpty": "Exibindo 0 a 0 de 0 registros",
                    "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                    "sInfoFiltered": "",
                    "sSearch": "Buscar",
                    "oPaginate": {
                        "sFirst": "Primeiro",
                        "sPrevious": "Anterior",
                        "sNext": "Próximo",
                        "sLast": "Último"
                    }
                },
                "ajax": "/NcmConvenio/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "anexx" },
                    { "data": "code" },
                    { "data": "description" },
                    { "data": "cest" },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            return "<a href='/NcmConvenio/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top'/> " +
                                "<a href='/NcmConvenio/Delete/" + data + "' class = 'glyphicon glyphicon glyphicon-trash pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' /> "
                        }
                    }
                ]
            });
        });
    </script>
}
