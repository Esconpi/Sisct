@model IEnumerable<Escon.SisctNET.Model.NcmConvenio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title"><strong>Ncms Cadastrados</strong></h3>
        <div class="btn-group pull-right">

            <a asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Novo Ncm
            </a>
        </div>

    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Cest)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ncm)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AnnexId)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cest)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ncm)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @item.Annex.Description
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="box-footer"></div>
</div>
