@model Escon.SisctNET.Model.Suspension

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" asp-route-id="@SessionManager.GetCompanyIdInSession()" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Editar Suspensão</strong>
        </h3>

    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="DateStart" class="control-label"></label>
                        <input type="text" name="DateStart" class="form-control dateformatmask" value="@Model.DateStart" required />
                    </div>

                    <div class="form-group col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="DateEnd" class="control-label"></label>
                        <input type="text" name="DateEnd" class="form-control dateformatmask" value="@Model.DateEnd" required />
                    </div>
                </div>


                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Confirmar" class="btn btn-success pull-right" />
                </div>

            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>

