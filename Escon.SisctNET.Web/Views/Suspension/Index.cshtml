@model IEnumerable<Escon.SisctNET.Model.Suspension>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title"><strong>Suspensões Cadastrados</strong></h3>
        <div class="btn-group pull-right">

            <a asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Nova Suspensão
            </a>

        </div>
        <br />
        <div style="width:100%; text-align:center;">
            <strong>@ViewBag.Name - @ViewBag.Document</strong>
        </div>

    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

            <table class="table table-striped table-bordered" id="tblSuspension" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DateStart)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateEnd)
                        </th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
    <div class="box-footer"></div>
</div>

@if (SessionManager.GetPersonInSession().Profile.Name.Equals("Master"))
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblSuspension').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "ajax": "/Suspension/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "inicio" },
                    { "data": "fim" },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            return "<a href='/Suspension/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Produto' /> "
                        }
                    }
                ]
            });
        });
    </script>
}
else
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblSuspension').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "ajax": "/Suspension/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "inicio" },
                    { "data": "fim" },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            return ""
                        }
                    }
                ]
            });
        });
    </script>
}
