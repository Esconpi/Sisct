@model Escon.SisctNET.Model.Company
<div id="hidden">
    <h4><strong>Importar:</strong> @Html.DisplayFor(model => model.SocialName) - @Html.DisplayFor(model => model.Document) </h4>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <form action="/NoteInventoryExit/Import" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-lg-1 col-md-1 col-xs-12">

                </div>
                <div class="form-group col-lg-3 col-md-6 col-xs-12">
                    <label class="control-label">XML</label>
                    <select name="xml" class="form-control selectoption">
                        <option value="EMPRESA">EMPRESA</option>
                        <option value="SEFAZ" selected>SEFAZ</option>
                    </select>
                </div>

                <div class="form-group col-lg-1 col-md-1 col-xs-12">

                </div>
                <br />
                <div class="form-group col-lg-3 col-md-1 col-xs-12">
                    <input type="submit" value="Confirmar" class="btn btn-success" onclick="showImport()"/>
                </div>
            </form>
        </div>

    </div>
</div>

<div style="text-align:center; display:none;" id="loadingImport">
    <img src="~/img/carregando.gif" />
</div>


