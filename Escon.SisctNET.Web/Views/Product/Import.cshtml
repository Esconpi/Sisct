@model Escon.SisctNET.Model.Product2

@{
    ViewData["Title"] = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Importar Produtos</strong>
        </h3>

    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
            <form asp-action="Import" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-lg-10 col-md-6 col-xs-12">
                        <label asp-for="GroupId" class="control-label"></label>
                        <select asp-items="@ViewBag.GroupId" name="GroupId" class="form-control selectoption" id="group"></select>
                        <span asp-validation-for="GroupId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label class="control-label">Inicio do Ato</label>
                        <input type="date" class="form-control" name="inicioATo" required/>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <label class="control-label"><strong>Selecione o arquivo</strong></label>
                        <input type="file" class="form-control" name="arquivo" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" required/>
                    </div>
                </div>
                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Importar" class="btn btn-success pull-right" />
                </div>

            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>
