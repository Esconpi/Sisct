@model IEnumerable<Escon.SisctNET.Model.CompanyCfop>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <a asp-controller="Company" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
            <h3 class="box-title"><strong>Cfop</strong></h3>
            <div class="btn-group pull-right">
                <a asp-action="Sincronize" asp-route-companyId=@ViewBag.Id class="btn btn-primary">
                    <i class="fa fa-refresh"></i>
                    Sincronizar
                </a>
            </div>

            <div style="width: 100%; text-align: center; padding-top:20px">
                <strong>@ViewBag.Company.SocialName</strong> <br />
                <b>CNPJ: </b>@ViewBag.Company.Document <b>Insc. Estadual: </b> @ViewBag.Company.Ie
            </div>
            <br />
        </div>
        <div class="box-body">

            <div style="width:100%; padding:20px;">
                <h5 style="border-left:5px solid; border-color:blue;">Cfop entrada</h5>
                <h5 style="border-left:5px solid; border-color:red;">Cfop saída</h5>
            </div>

            <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

                <table class="table table-striped table-bordered" id="tblCompanyCfop" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Cfop
                            </th>
                            <th>
                                Descrição
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Active)
                            </th>
                            <th width="200px">
                                Tipo
                            </th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>

    

    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {

                $('#tblCompanyCfop').DataTable({
                    searchDelay: 300,
                    "fnDrawCallback": function (oSettings) {
                        $('.showDetail').off();
                        $('.showProduct').off();
                        $('[data-toggle="tooltip"]').tooltip();
                        $("input[type='checkbox']").bootstrapToggle();
                        $(".selectoption").select2();
                        $("#tblCompanyCfop").on("change", "input[type='checkbox']", function(){
                            try {

                                var status = "";
                                status = $(this).prop('checked');
                                $.ajax({
                                url: '@(Url.Action("UpdateStatus", "CompanyCfop"))',
                                dataType: 'json',
                                type: 'post',
                                contentType: 'application/json',
                                data: JSON.stringify({ "Id": $(this).prop('id'), "Active": $(this).prop('checked') }),
                                processData: false,
                                success: function (data, textStatus, jQxhr) {
                                    if (status == false) {
                                        console.log(status);
                                    }
                                    else {
                                        console.log(status);
                                    }
                                    
                                },
                                error: function (jqXhr, textStatus, errorThrown) {
                                    alert(errorThrown);
                                }
                                });

                            } catch (e) {
                                console.log(e);
                            }
                        });


                        $(".selectoption").select2({
                            placeholder: 'Selecione um tipo de Cfop',
                            allowClear: true,
                            ajax: {
                                delay: 500,
                                quietMillis: 10,
                                cache: false,
                                dataType: 'json',
                                type: 'GET',
                                async: true,
                                url: '/CfopType/GetAll'
                            }
                        });

                        $("#tblCompanyCfop tbody").on("change", ".selectoptiontype", function () {
                            var companyCfopId = $(this).attr("companyCfopId");
                            var username = "";
                            username =  $(this).children("option:selected").text();
                            var cfopTypeId = $(this).val();

                            $('#loader_' + companyCfopId).css('display', 'block');
                            $.ajax({
                                url: '@(Url.Action("UpdateCfopType", "CompanyCfop"))',
                                dataType: 'json',
                                type: 'post',
                                contentType: 'application/json',
                                async: true,
                                data: JSON.stringify({ "CompanyCfopId": companyCfopId, "cfopTypeId": cfopTypeId }),
                                processData: false,
                                success: function (data, textStatus, jQxhr) {
                                },
                                error: function (jqXhr, textStatus, errorThrown) {
                                    alert(errorThrown);
                                }
                            });
                        });

                    },
                    "processing": true,
                    "ordering": false,
                    "serverSide": true,
                    "oLanguage": {
                        "sProcessing": "Aguarde enquanto os dados são carregados ...",
                        "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                        "sZeroRecords": "Nenhum registro disponível",
                        "sInfoEmpty": "Exibindo 0 a 0 de 0 registros",
                        "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                        "sInfoFiltered": "",
                        "sSearch": "Buscar",
                        "oPaginate": {
                            "sFirst": "Primeiro",
                            "sPrevious": "Anterior",
                            "sNext": "Próximo",
                            "sLast": "Último"
                        }
                    },
                    "ajax": "/CompanyCfop/GetAll",
                    "initComplete": function (settings, json) {
                    },
                    "columns": [
                        {
                            "mData": "code",
                            "mRender": function (data, type, row) {
                                 if (data < 5000) {
                                    return "<div style='border-left:5px solid; border-color:blue;'> "+ data +"</div>";
                                 }
                                 else {
                                    return "<div style='border-left:5px solid; border-color:red;'> "+ data +"</div>";
                                 }
                            }
                        },
                        { "data": "description" },
                        {
                            "mData": "active",
                            "mRender": function (data, type, row) {
                                 if (data == true) {
                                    return "<input type='checkbox' data-off='Não' data-on='Sim' checked='" + data + "' data-toggle='toggle' data-size='small' data-offstyle = 'danger' data-onstyle = 'success'  id='" + row.id + "' />";
                                 }
                                 else {
                                    return "<input type='checkbox' data-off='Não' data-on='Sim' data-toggle='toggle' data-size='small' data-offstyle = 'danger' data-onstyle = 'success' id='" + row.id + "' />";
                                 }
                            }
                        },
                        {
                            "mData": "cfopType",
                            "mRender": function (data, type, row) {
                                return "<select companyCfopId='" + row.id + "' name='cfopTypeId' class='form-control selectoption selectoptiontype' style='width:100%;'></select><span id='span_" + row.id + "' style='font-size:12px;margin-top:-10px;'>" + row.cfopType + "</span>";

                            }
                        },
                    ]
                });
            })
        })
    </script>