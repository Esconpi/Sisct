@model IEnumerable<Escon.SisctNET.Model.DarDocumentCompany>
@{
    ViewData["Title"] = "Watcher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <div class="box-title">
                Filtrar Documentos Dar
            </div>
        </div>

        <div class="box-body">
            <div class="col-md-12">
                <form asp-action="Watcher" method="post">
                    <div class="form-group col-lg-4 col-md-4 col-xs-12">
                        <label class="control-label">Perído de Referência</label>
                        <select asp-items="@ViewBag.PeriodId" name="PeriodId" class="form-control selectoption" id="PeriodId"></select>
                    </div>
                    
                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <label class="control-label">Empresas</label>
                        <select asp-items="@ViewBag.CompanyId" name="CompanyId" class="form-control selectoption" id="CompanyIdCompanyId"></select>
                    </div>

                    <div class="form-group col-lg-1 col-md-1 col-xs-12">
                        <label class="control-label">&nbsp;</label>
                        <button type="submit" class="form-control btn btn-primary" value="Filtrar">
                            <i class="fa fa-search"></i>
                            Filtrar
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>

<div class="box box-primary">
    <div class="box-header">
        <div class="box-title">
                Período Selecionado: @(ViewBag.Period)
        </div>
    </div>

    <div class="box-body">
      
        <div class="col-md-12">
            <div class="pull-right">

                <div class="badge bg-green">Dar gerado</div>
                <div class="badge bg-yellow">Dar gerado parcial</div>
                <div class="badge bg-red">Dar não gerado</div>
                
            </div>
            <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

                <table class="table table-striped table-bordered" id="tblIndex" style="width:100%;">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                CNPJ
                            </th>
                            <th>
                                Razão Social
                            </th>
                            <th>
                                Período
                            </th>
                            <th>
                                Código DAR
                            </th>
                            <th>
                                Descrição DAR
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            string foreColor = "";
                            if (item.DarCode == null) { foreColor = "red"; } else { foreColor = "Green"; }

                            <tr style="color:@(foreColor)">
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Document)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SocialName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.PeriodReference)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DarCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DarDescription)
                                </td>
                                <td style="width:20px;">
                                    <a style="cursor:pointer;" class="btnSendBillet " data-toggle='tooltip' data-placement='top' title='Gerar DAR para @(item.SocialName)' data-billet="@(item.Id)">
                                        <i class="fa fa-send"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="box-footer">

    </div>
</div>
<script src="~/app/watcherDar.js"></script>