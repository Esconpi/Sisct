@model IEnumerable<Escon.SisctNET.Model.Note>

@{
    ViewData["Title"] = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-primary">
    <div class="box-header">
        @if (ViewBag.Erro != 1)
        {
            <a asp-controller="Note" asp-action="Index" asp-route-id="@SessionManager.GetCompanyIdInSession()" asp-route-year="@SessionManager.GetYearInSession()" asp-route-month="@SessionManager.GetMonthInSession()" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>

            <h3 class="box-title"><strong>Notas Importadas em Outro Mês</strong></h3>
        }

        <div style="width:100%; text-align:center;">
            <strong>@ViewBag.Company.SocialName - @ViewBag.Company.Document</strong>
        </div>
    </div>
    <div class="box-body">
        @if (ViewBag.Erro == 1)
        {
            <p style="text-align:center;color:red;"><strong>A nota @ViewBag.Chave estar com erro de codificação no xml</strong></p>
        }
        else
        {
            <div style="width:100%; padding:20px;">
                <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nnf)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Dhemi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Uf)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cnpj)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Xnome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vnf)
                            </th>
                            <th>Mês</th>
                            <th>Ano</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nnf)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Dhemi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Uf)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cnpj)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Xnome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vnf)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MesRef)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnoRef)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        }

    </div>
    <div class="box-footer"></div>
</div>
