@model Escon.SisctNET.Model.Company

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
            <h3 class="box-title">
                <strong>Editando Empresa: </strong> @Model.SocialName
            </h3>

        </div>
        <hr />
        <div class="box-body">
                <div class="col-md-12">
                    <form asp-action="Edit">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Id" class="form-control" type="hidden" />

                        <div class="row">
                            <div class="form-group col-lg-4 col-md-6 col-xs-12">
                                @Html.LabelFor(model => model.Active, "Ativo", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(model => model.Active, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "success", @data_offstyle = "danger", @readonly = "true" })
                                    </label>
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-6 col-xs-12">
                                @Html.LabelFor(model => model.Incentive, "Incetivada", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(model => model.Incentive, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "success", @data_offstyle = "danger", @readonly = "true" })
                                    </label>
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-6 col-xs-12">
                                @Html.LabelFor(model => model.Status, "UF", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(model => model.Status, new { @data_off = "Todas", @data_on = "Fora", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "primary", @data_offstyle = "warning", @readonly = "true" })
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-lg-12 col-md-12 col-xs-12">
                                <label asp-for="SocialName" class="control-label"></label>
                                <input asp-for="SocialName" class="form-control textformartmask" />
                                <span asp-validation-for="SocialName" class="text-danger"></span>
                            </div>


                        </div>

                        <div class="row">
                            <div class="form-group col-lg-12 col-md-12 col-xs-12">
                                <label asp-for="FantasyName" class="control-label"></label>
                                <input asp-for="FantasyName" class="form-control textformartmask" />
                                <span asp-validation-for="FantasyName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-lg-1 col-md-6 col-xs-12">
                                <label asp-for="Code" class="control-label"></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                                <label asp-for="Document" class="control-label"></label>
                                <input asp-for="Document" class="form-control" />
                                <span asp-validation-for="Document" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-6 col-xs-12">
                                <label asp-for="Ie" class="control-label"></label>
                                <input asp-for="Ie" class="form-control" />
                                <span asp-validation-for="Ie" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                                <label asp-for="IM" class="control-label"></label>
                                <input asp-for="IM" class="form-control" />
                                <span asp-validation-for="IM" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control phoneformatmask" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                                <label asp-for="Cep" class="control-label"></label>
                                <input asp-for="Cep" class="form-control textformartmask" />
                                <span asp-validation-for="Cep" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-lg-10 col-md-6 col-xs-12">
                                <label asp-for="Logradouro" class="control-label"></label>
                                <input asp-for="Logradouro" class="form-control textformartmask" />
                                <span asp-validation-for="Logradouro" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                                <label asp-for="Number" class="control-label"></label>
                                <input asp-for="Number" class="form-control textformartmask" />
                                <span asp-validation-for="Number" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-lg-6 col-md-6 col-xs-12">
                                <label asp-for="Complement" class="control-label"></label>
                                <input asp-for="Complement" class="form-control textformartmask" />
                                <span asp-validation-for="Complement" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6 col-md-6 col-xs-12">
                                <label asp-for="District" class="control-label"></label>
                                <input asp-for="District" class="form-control textformartmask" />
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-12 col-md-12 col-xs-12">
                                <label asp-for="CountyId" class="control-label"></label>
                                <select asp-items="@ViewBag.CountyId" name="CountyId" class="form-control selectoption" id="county"></select>
                                <span asp-validation-for="CountyId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group col-lg-12 col-md-12 col-xs-12">
                            <input type="submit" value="Confirmar" class="btn btn-success pull-right" />
                        </div>

                    </form>
                </div>
        </div>
        <div class="box-footer">

        </div>
    </div>
    <script type="text/javascript">
        $(".textformartmask").on("input", function () {
            $(this).val($(this).val().toUpperCase());
        });

        var county = @Model.CountyId;
        $("#county").children('option').each(function () {
            if ($(this).val() == county) {
                $(this).attr('selected', true);
            }
        });
    </script>
