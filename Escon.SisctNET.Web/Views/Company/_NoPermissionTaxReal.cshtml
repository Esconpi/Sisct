@model Escon.SisctNET.Model.Company

<div class="col-lg-12">
    <form asp-action="Tax" method="post">


        <div class="row">
            <div class="form-group col-lg-3 col-md-6 col-xs-12">
                <label asp-for="PercentualPis" class="control-label"></label>
                <input asp-for="PercentualPis" class="form-control money" disabled />
            </div>
            <div class="form-group col-lg-3 col-md-6 col-xs-12">
                <label asp-for="PercentualPisRF" class="control-label">PIS Rec. Financeira %</label>
                <input class="form-control money" name="PercentualPisRF" value="@Model.PercentualPisRF" disabled/>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-xs-12">
                <label asp-for="PercentualPisCredito" class="control-label">PIS Crédito %</label>
                <input class="form-control money" name="PercentualPisCredito" value="@Model.PercentualPisCredito" disabled/>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-xs-12">
                <label asp-for="PercentualCofins" class="control-label"></label>
                <input asp-for="PercentualCofins" class="form-control money" disabled />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-lg-3 col-md-6 col-xs-12">
                <label asp-for="PercentualCofinsRF" class="control-label">COFINS Rec. Financeira %</label>
                <input class="form-control money" name="PercentualCofinsRF" value="@Model.PercentualCofinsRF" disabled />
            </div>
            <div class="form-group col-lg-3 col-md-6 col-xs-12">
                <label asp-for="PercentualCofinsCredito" class="control-label">COFINS Crédito %</label>
                <input class="form-control money" name="PercentualCofinsCredito" value="@Model.PercentualCofinsCredito" disabled />
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                @Html.LabelFor(model => model.Sped, "Gerar Sped", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.Sped, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "success", @data_offstyle = "danger", @readonly = "true", @disabled = "true" })
                    </label>
                </div>
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                @Html.LabelFor(model => model.Taxation, "Tributação Individual", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.Taxation, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "success", @data_offstyle = "danger", @readonly = "true", @disabled = "true" })
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>
