@model IEnumerable<Escon.SisctNET.Model.Taxation>

@{
    ViewData["Title"] = "Ncm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <a asp-controller="Company" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
            <h3 class="box-title"><strong>Tributações -</strong> @ViewBag.Company-@ViewBag.Document</h3>
        </div>
        <div class="box-body">
            <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
                <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Ncm)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Ncm.Code
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div class="box-footer"></div>
    </div>