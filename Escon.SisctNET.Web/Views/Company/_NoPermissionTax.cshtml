@model Escon.SisctNET.Model.Company

<div class="col-lg-12">
    <form asp-action="Tax" method="post">
        <div class="row">
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="IRPJ1" class="control-label"></label>
                <input asp-for="IRPJ1" class="form-control money" disabled />
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="IRPJ2" class="control-label"></label>
                <input asp-for="IRPJ2" class="form-control money" disabled />
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="IRPJ3" class="control-label"></label>
                <input asp-for="IRPJ3" class="form-control money" disabled />
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="IRPJ4" class="control-label"></label>
                <input asp-for="IRPJ4" class="form-control money" disabled />
            </div>

            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="CSLL1" class="control-label"></label>
                <input asp-for="CSLL1" class="form-control money" disabled />
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="CSLL2" class="control-label"></label>
                <input asp-for="CSLL2" class="form-control money" disabled />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="PercentualIRPJ" class="control-label"></label>
                <input asp-for="PercentualIRPJ" class="form-control money" disabled />
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="PercentualCSLL" class="control-label"></label>
                <input asp-for="PercentualCSLL" class="form-control money" disabled />
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="PercentualPis" class="control-label"></label>
                <input asp-for="PercentualPis" class="form-control money" disabled />
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="PercentualCofins" class="control-label"></label>
                <input asp-for="PercentualCofins" class="form-control money" disabled />
            </div>

            <div class="form-group col-lg-2 col-md-6 col-xs-12" id="checkbox">
                @Html.LabelFor(model => model.StatusCPRB, "CPRB", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.StatusCPRB, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "success", @data_offstyle = "danger", @readonly = "true", @disabled = "true" })
                    </label>
                </div>
            </div>
            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                <label asp-for="CPRB" class="control-label"></label>
                <input asp-for="CPRB" class="form-control money" disabled />
            </div>
        </div>
    </form>
</div>
