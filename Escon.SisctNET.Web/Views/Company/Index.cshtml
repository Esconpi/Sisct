@model IEnumerable<Escon.SisctNET.Model.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title"><strong>Empresas Cadastradas</strong></h3>
        <div class="btn-group pull-right">

            <a asp-action="Sincronize" class="btn btn-primary">
                <i class="fa fa-refresh"></i>
                Sincronizar
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Nova Empresa
            </a>


        </div>

    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SocialName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FantasyName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Document)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Active)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Incentive)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SocialName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FantasyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Document)
                            </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => item.Active, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle",@data_offstyle = "danger", @data_onstyle = "success", @readonly = "true", @id = item.Id, onclick = "return alert()", @class = "active" })
                            </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => item.Incentive, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_offstyle = "danger", @data_onstyle = "success"   , @readonly = "true", @id = item.Id, onclick = "return alert()", @class = "incentive" })
                            </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => item.Status, new { @data_off = "Todas", @data_on = "Fora", @data_size = "small", @data_toggle = "toggle",@data_offstyle = "warning", @data_onstyle = "primary", @readonly = "true", @id = item.Id, onclick = "return alert()", @class = "status"})
                            </td>
                            <td style="width:110px;">
                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Editar Empresa" })

                                @Html.ActionLink(" ", "Delete", new { id = item.Id },
                                    new { onclick = "return confirm('Deseja exluir esse registro?');", @class = "glyphicon glyphicon-trash pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Excluir Empresa" })

                                @Html.ActionLink(" ", "Index", "Taxation", new { companyId = item.Id }, new { @class = "glyphicon glyphicon-folder-close pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Visualizar Ncms Trbutados" })

                                @if (item.Incentive == true)
                                {
                                    @Html.ActionLink(" ", "EditNew", new { id = item.Id }, new { @class = "glyphicon glyphicon-briefcase pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Visualizar Incentivo" })

                                }
                                @if (SessionManager.GetCompanyCfopInSession().Equals(17))
                                {
                                    @Html.ActionLink(" ", "Index", "CompanyCfop", new { companyId = item.Id }, new { @class = "glyphicon glyphicon-folder-open pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Visualizar Cfops" })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="box-footer"></div>
</div>
<div class="modal modal-primary fade in" id="formShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        

        $("#tblIndex").on("change", ".active", function(){
            try {

                    $.ajax({
                    url: '@(Url.Action("UpdateActive", "Company"))',
                    dataType: 'json',
                    type: 'post',
                    contentType: 'application/json',
                    data: JSON.stringify({ "Id": $(this).prop('id'), "Active": $(this).prop('checked') }),
                    processData: false,
                    success: function (data, textStatus, jQxhr) {

                    },
                    error: function (jqXhr, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                    });

            } catch (e) {
                console.log(e);
            }
        });

         $("#tblIndex").on("change", ".incentive", function(){
            try {

                    $.ajax({
                    url: '@(Url.Action("UpdateIncentive", "Company"))',
                    dataType: 'json',
                    type: 'post',
                    contentType: 'application/json',
                    data: JSON.stringify({ "Id": $(this).prop('id'), "Incentive": $(this).prop('checked') }),
                    processData: false,
                    success: function (data, textStatus, jQxhr) {

                    },
                    error: function (jqXhr, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                    });

            } catch (e) {
                console.log(e);
            }
         });

         $("#tblIndex").on("change", ".status", function(){
            try {

                    $.ajax({
                    url: '@(Url.Action("UpdateStatus", "Company"))',
                    dataType: 'json',
                    type: 'post',
                    contentType: 'application/json',
                    data: JSON.stringify({ "Id": $(this).prop('id'), "Status": $(this).prop('checked') }),
                    processData: false,
                    success: function (data, textStatus, jQxhr) {

                    },
                    error: function (jqXhr, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                    });

            } catch (e) {
                console.log(e);
            }
        });
    })

</script>