@model IEnumerable<Escon.SisctNET.Model.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title"><strong>Empresas Cadastradas</strong></h3>
        <div class="btn-group pull-right">

            <a asp-action="Sincronize" class="btn btn-primary">
                <i class="fa fa-refresh"></i>
                Sincronizar
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Nova Empresa
            </a>


        </div>

    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:10px;">
            <table class="table table-striped table-bordered" id="tblCompany" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SocialName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FantasyName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Document)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Active)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Incentive)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th width="150px">
                            @Html.DisplayNameFor(model => model.CountingTypeId)
                        </th>
                        <th width="100px"></th>
                    </tr>
                </thead>
               
            </table>

        </div>
    </div>
    <div class="box-footer"></div>
</div>
<div class="modal modal-primary fade in" id="formShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
       
        $('#tblCompany').DataTable({
            searchDelay: 300,
            "fnDrawCallback": function (oSettings) {
                $('.showDetail').off();
                $('.showProduct').off();
                $('[data-toggle="tooltip"]').tooltip();
                $("input[type='checkbox']").bootstrapToggle();
                $(".selectoption").select2();
                $('.showTaxation').click(function () {
                    $.get('Company/TaxationNcm/' + $(this).attr('id'), function (html) {
                        $('#formShow .modal-body').empty();
                        $('#formShow .modal-body').append($(html));
                        $('#formShow').modal('show');
                    });

                });

                 $("#tblCompany").on("change", ".active", function(){
                    try {

                        $.ajax({
                        url: '@(Url.Action("UpdateActive", "Company"))',
                        dataType: 'json',
                        type: 'post',
                        contentType: 'application/json',
                        data: JSON.stringify({ "Id": $(this).prop('id'), "Active": $(this).prop('checked') }),
                        processData: false,
                        success: function (data, textStatus, jQxhr) {

                        },
                        error: function (jqXhr, textStatus, errorThrown) {
                            alert(errorThrown);
                        }
                        });

                    } catch (e) {
                        console.log(e);
                    }
                 });

                 $("#tblCompany").on("change", ".incentive", function(){
                    try {

                        $.ajax({
                        url: '@(Url.Action("UpdateIncentive", "Company"))',
                        dataType: 'json',
                        type: 'post',
                        contentType: 'application/json',
                        data: JSON.stringify({ "Id": $(this).prop('id'), "Incentive": $(this).prop('checked') }),
                        processData: false,
                        success: function (data, textStatus, jQxhr) {

                        },
                        error: function (jqXhr, textStatus, errorThrown) {
                            alert(errorThrown);
                        }
                        });

                    } catch (e) {
                        console.log(e);
                    }
                 });

                 $("#tblCompany").on("change", ".status", function(){
                    try {

                        $.ajax({
                        url: '@(Url.Action("UpdateStatus", "Company"))',
                        dataType: 'json',
                        type: 'post',
                        contentType: 'application/json',
                        data: JSON.stringify({ "Id": $(this).prop('id'), "Status": $(this).prop('checked') }),
                        processData: false,
                        success: function (data, textStatus, jQxhr) {

                        },
                        error: function (jqXhr, textStatus, errorThrown) {
                            alert(errorThrown);
                        }
                        });

                    } catch (e) {
                        console.log(e);
                    }
                 });

                 $("#tblCompany").on("change", "select", function () {

                    $.ajax({
                        url: '@(Url.Action("UpdateCountingType", "Company"))',
                        dataType: 'json',
                        type: 'post',
                        contentType: 'application/json',
                        data: JSON.stringify({ "CompanyId": $(this).attr("CompanyId"), "CountingTypeId": $(this).val() }),
                        processData: false,
                        success: function (data, textStatus, jQxhr) {

                        },
                        error: function (jqXhr, textStatus, errorThrown) {
                            alert(errorThrown);
                        }
                    });

                 });

            },
            "processing": true,
            "ordering": false,
            "serverSide": true,
            "oLanguage": {
                "sProcessing": "Aguarde enquanto os dados são carregados ...",
                "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                "sZeroRecords": "Nenhum registro disponível",
                "sInfoEmpty": "Exibindo 0 a 0 de 0 registros",
                "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                "sInfoFiltered": "",
                "sSearch": "Buscar",
                "oPaginate": {
                    "sFirst": "Primeiro",
                    "sPrevious": "Anterior",
                    "sNext": "Próximo",
                    "sLast": "Último"
                }
            },
            "ajax": "/Company/GetAll",
            "initComplete": function (settings, json) {
            },
            "columns": [
                { "data": "code" },
                { "data": "socialName" },
                { "data": "fantasyName" },
                { "data": "document" },
                {
                    "mData": "active",
                    "mRender": function (data, type, row) {
                        if (data == true) {
                            return "<input type='checkbox' data-off='Não' data-on='Sim' checked='" + data + "' data-toggle='toggle' data-size='small' data-offstyle = 'danger', data-onstyle = 'success', class = 'active' , id='" + row.id + "' />";
                        }
                        else {
                            return "<input type='checkbox' data-off='Não' data-on='Sim' data-toggle='toggle' data-size='small' data-offstyle = 'danger', data-onstyle = 'success', class = 'active'  ,  id='" + row.id + "' />";
                        }
                    }
                },
                {
                    "mData": "incentivo",
                    "mRender": function (data, type, row) {
                        if (data == true) {
                            return "<input type='checkbox' data-off='Não' data-on='Sim' checked='" + data + "' data-toggle='toggle' data-size='small' data-offstyle = 'danger', data-onstyle = 'success', class = 'incentive'  ,  id='" + row.id + "' />";
                        }
                        else {
                            return "<input type='checkbox' data-off='Não' data-on='Sim' data-toggle='toggle' data-size='small' data-offstyle = 'danger', data-onstyle = 'success' , class = 'incentive' ,  id='" + row.id + "' />";
                        }
                    }
                },
                {
                    "mData": "status",
                    "mRender": function (data, type, row) {
                        if (data == true) {
                            return "<input type='checkbox' data-off='Todas' data-on='Fora' checked='" + data + "' data-toggle='toggle' data-size='small' data-offstyle = 'warning', data-onstyle = 'primary', class = 'status'  , id='" + row.id + "' />";
                        }
                        else {
                            return "<input type='checkbox' data-off='Todas' data-on='Fora' data-toggle='toggle' data-size='small' data-offstyle = 'warning', data-onstyle = 'primary', class = 'status'  ,  id='" + row.id + "' />";
                        }
                    }
                },
                {
                    "mData": "countingTypeId",
                    "mRender": function (data, type, row) {
                        if (data == 1) {
                              return "<select companyId='" + row.id + "' name='countingTypeId' class='form-control selectoption selectoptiontype' style='width:100%;'><option value='0'>Nenhum</option><option value='1' selected>Lucro Real</option><option value='2'>Lucro Presumido</option><option value='3'>Simples</option></select>";
                        }
                        else if (data == 2) {
                              return "<select companyId='" + row.id + "' name='countingTypeId' class='form-control selectoption selectoptiontype' style='width:100%;'><option value='0'>Nenhum</option><option value='1'>Lucro Real</option><option value='2' selected>Lucro Presumido</option><option value='3'>Simples</option></select>";
                        }
                        else if (data == 3) {
                             return "<select companyId='" + row.id + "' name='countingTypeId' class='form-control selectoption selectoptiontype' style='width:100%;'><option value='0'>Nenhum</option><option value='1'>Lucro Real</option><option value='2'>Lucro Presumido</option><option value='3' selected>Simples</option></select>";
                        }
                        else
                        {
                             return "<select companyId='" + row.id + "' name='countingTypeId' class='form-control selectoption selectoptiontype' style='width:100%;'><option value='0' selected>Nenhum</option><option value='1'>Lucro Real</option><option value='2'>Lucro Presumido</option><option value='3'>Simples</option></select>";
                        }
                    }
                },
                {
                    "mData": "id",
                    "mRender": function (data, type, row) {
                        if (row.incentivo == true) {

                            return "<a href='/Company/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Empresa' /> " +
                                "<a href='/Taxation/Index/" + data + "' class = 'glyphicon glyphicon-folder-close pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Visualizar Ncms Trbutados' /> " +
                                "<a href='/CompanyCfop/Index/" + data + "' class = 'glyphicon glyphicon-folder-open pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Visualizar Cfops' /> " +
                                "<a href='/Company/EditNew/" + data + "' class = 'glyphicon glyphicon-briefcase pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Visualizar Incentivo' /> " +
                                "<a href='/Suspension/Index/" + data + "' class = 'fa fa-calendar-minus-o pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Visualizar Suspensões' /> " 
                        }
                        else {
                            
                              return "<a href='/Company/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Empresa' /> " +
                                "<a href='/Taxation/Index/" + data + "' class = 'glyphicon glyphicon-folder-close pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Visualizar Ncms Trbutados' /> " +
                                "<a href='/CompanyCfop/Index/" + data + "' class = 'glyphicon glyphicon-folder-open pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Visualizar Cfops' /> "
                        }

                    }
                }
            ]
        });

    })

</script>