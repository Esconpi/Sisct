@model Escon.SisctNET.Model.Company
<div class="box-body">
    <h4> <strong>Relatório:</strong> @Html.DisplayFor(model => model.FantasyName) - @Html.DisplayFor(model => model.Document) </h4>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <form action="ProductNote/Relatory" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="id" value="@Html.DisplayFor(model => model.Id)" />
                <div class="row">
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label class="control-label">Ano</label>
                        <input type="text" name="year" class="form-control" value="@DateTime.Now.ToString("yyyy")" required />
                    </div>
                    <div class="form-group col-lg-3 col-md-6 col-xs-12">
                        <label class="control-label">Mês</label>
                        <select name="month" class="form-control selectoption">
                            <option value="Janeiro">Janeiro</option>
                            <option value="Fevereiro">Fevereiro</option>
                            <option value="Março">Março</option>
                            <option value="Abril">Abril</option>
                            <option value="Maio">Maio</option>
                            <option value="Junho">Junho</option>
                            <option value="Julho">Julho</option>
                            <option value="Agosto">Agosto</option>
                            <option value="Setembro">Setembro</option>
                            <option value="Outubro">Outubro</option>
                            <option value="Novembro">Novembro</option>
                            <option value="Dezembro">Dezembro</option>
                        </select>
                    </div>
                    <div class="form-group col-lg-7 col-md-6 col-xs-12">
                        <label class="control-label">Tipo de tributação</label>
                        <select name="typeTaxation" class="form-control selectoption">
                            <option value="0">Selecione o tipo</option>
                            <option value="1">Substituição Tributária por MVA</option>
                            <option value="2">Antecipação Parcial</option>
                            <option value="7">Antecipação Total</option>
                            <option value="3">Consumo</option>
                            <option value="4">Consumo para Revenda</option>
                            <option value="5">Imobilizado</option>
                            <option value="6">Isento</option>

                        </select>
                    </div>
                </div>
                <div class="row">

                    <div class="form-group col-lg-5 col-md-6 col-xs-12">
                        <label class="control-label">Tipo</label>
                        <select name="type" id="type" class="form-control selectoption">
                            <option value="1">Produto</option>
                            <option value="3">Produto fora da pauta</option>
                            <option value="2">Nota</option>
                            <!--<option value="4">Agrupado</option>
                            <option value="5">Agrupado - Sintetico</option> -->
                        </select>
                    </div>

                    <div class="form-group col-lg-5 col-md-6 col-xs-12">
                        <label class="control-label"></label>
                        <input type="hidden" id="caixa_num_nota" name="nota" class="form-control" placeholder="Nota" />
                    </div>
                </div>
                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Gerar" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>

    </div>
</div>
<script>
     $("#type").on("change", function () {
         if ($(this).val() == 2) {
             console.log('entrou')
             $('input[name=nota]').prop('type', 'text');
         }
         else {
             $('input[name=nota]').prop('type', 'hidden');
         }
    });
</script>
