<table class="table table-striped table-bordered" style="width:100%;font-size:12px;">
    <thead>
        <tr>
            <th>Nº NFe</th>
            <th>Fornecedor</th>
            <th>Total NFe</th>
            <th>Total Sped</th>
            <th>DIFERENÇA</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var valor in ViewBag.Valores)
        {
            <tr>
                <td>@valor[0]</td>
                <td>@valor[1]</td>
                <td style="text-align:right;">@string.Format("{0:N}", Convert.ToDecimal(valor[2].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</td>
                <td style="text-align:right">@string.Format("{0:N}", Convert.ToDecimal(valor[3].Replace(',', '*').Replace('.', ',').Replace('*', '.'))) </td>
                <td style="background-color:lightgray;text-align:right;">@string.Format("{0:N}", Convert.ToDecimal(valor[4].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</td>
            </tr>
        }
    </tbody>
    <tbody>
        <tr>
            <td colspan="2"><strong>Total</strong></td>
            <td style="text-align:right;"><strong>@string.Format("{0:N}", Convert.ToDecimal(ViewBag.TotalXml))</strong></td>
            <td style="text-align:right;"><strong>@string.Format("{0:N}", Convert.ToDecimal(ViewBag.TotalSped))</strong></td>
            <td style="background-color:lightgray; text-align:right;"><strong>@string.Format("{0:N}", Convert.ToDecimal(ViewBag.TotalDif)) </strong></td>
        </tr>
    </tbody>
</table>

<div class="col-lg-12">
    <h6>
        <strong>
            @ViewBag.Valores.Count registro(s)
        </strong>
    </h6>
</div>