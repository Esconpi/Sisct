@model Escon.SisctNET.Model.Company
<div id="hidden">
    <h4><strong>Importar:</strong> @Html.DisplayFor(model => model.SocialName) - @Html.DisplayFor(model => model.Document) </h4>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <form action="/NoteInventoryEntry/Import" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <label class="control-label"><strong>Selecione o arquivo Sped</strong></label>
                    <div class="fileUploadInput">
                        <input type="file" name="arquivo" id="arquivo" accept=".txt" onchange="ativar_button()"/>
                        <button><i class="fa fa-cloud-upload"></i></button>
                    </div>
                </div>


                <br />
                <div class="form-group col-lg-3 col-md-1 col-xs-12 pull-right">
                    <input type="submit" value="Confirmar" class="btn btn-success" onclick="showImport()" id="ativa" disabled />
                </div>
            </form>
        </div>

    </div>
</div>

<div style="text-align:center; display:none;" id="loadingImport">
    <img src="~/img/carregando.gif" />
</div>


