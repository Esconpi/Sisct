@model Escon.SisctNET.Model.NatReceita

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>

        <h3 class="box-title"><strong>Editar Natureza da Receita:</strong> @Model.Code</h3>
    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-lg-4 col-md-4 col-xs-12">
                        <label asp-for="CodigoAC" class="control-label"></label>
                        <input asp-for="CodigoAC" class="form-control" />
                        <span asp-validation-for="CodigoAC" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-xs-12">
                        <label asp-for="CstId" class="control-label"></label>
                        <select asp-items="@ViewBag.CstId" name="CstId" class="form-control selectoption" id="cst"></select>
                        <span asp-validation-for="CstId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-xs-12">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12 col-md-10 col-xs-12">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Confirmar" class="btn btn-success pull-right" />
                </div>

            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>

<script type="text/javascript">
     var cst = @Model.CstId;
    $("#cst").children('option').each(function () {
        if ($(this).val() == cst) {
            $(this).attr('selected', true);
        }
    });

</script>
