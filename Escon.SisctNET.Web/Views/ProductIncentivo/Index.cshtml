@model IEnumerable<Escon.SisctNET.Model.ProductIncentivo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="HomeExit" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Produtos</strong></h3>
        <div class="btn-group pull-right">
            <a href="#" id=@ViewBag.Id class="btn btn-primary showImport">
                <i class="fa fa-cloud-download"></i>
                Importar
            </a>
        </div>

    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

            @if (ViewBag.TypeCompany == true)
            {
                <table class="table table-striped table-bordered" id="tblProductIncentivo" style="width:100%">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Code)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ncm)
                            </th>
                            <th>
                                Tributado
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TypeTaxation)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    
                </table>

            }
            else
            {
                <table class="table table-striped table-bordered" id="tblProductIncentivo" style="width:100%">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Code)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ncm)
                            </th>
                            <th>
                                Tributado
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TypeTaxation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateStart)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateEnd)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    
                </table>
            }
        </div>
    </div>
    <div class="box-footer"></div>
</div>
@if (ViewBag.TypeCompany == true)
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblProductIncentivo').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "ajax": "/ProductIncentivo/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "code" },
                    { "data": "name" },
                    { "data": "nncm" },
                    {
                         "mData": "active",
                         "mRender": function (data, type, row) {
                            return "<input type='checkbox' data-off='Não' data-on='Sim' checked='" + data + "' data-toggle='toggle' data-size='small' data_offstyle = 'danger', data_onstyle = 'success' , disabled = 'true' id='" + row.id + "' />";
                         }
                    },
                    { "data": "tipoTaxation" },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                            return "<a href='/ProductIncentivo/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Ncm' /> "
                        }
                    }
                ]
            });
        });
    </script>
}
else
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblProductIncentivo').DataTable({
                searchDelay: 300,
                "fnDrawCallback": function (oSettings) {
                    $('.showDetail').off();
                    $('.showProduct').off();
                    $('[data-toggle="tooltip"]').tooltip();
                    $("input[type='checkbox']").bootstrapToggle();
                },
                "processing": true,
                "ordering": false,
                "serverSide": true,
                "ajax": "/ProductIncentivo/GetAll",
                "initComplete": function (settings, json) {
                },
                "columns": [
                    { "data": "code" },
                    { "data": "name" },
                    { "data": "nncm" },
                    {
                         "mData": "active",
                         "mRender": function (data, type, row) {
                            return "<input type='checkbox' data-off='Não' data-on='Sim' checked='" + data + "' data-toggle='toggle' data-size='small' data_offstyle = 'danger', data_onstyle = 'success', disabled = 'true' id='" + row.id + "' />";
                         }
                    },
                    { "data": "tipoTaxation" },
                    { "data": "inicio" },
                    {
                        "mData": "fim",
                        "mRender": function (data, type, row) {
                            if (data == null) {
                                return ""
                            }
                            else {
                                return data
                            }
                         }
                    },
                    {
                        "mData": "id",
                        "mRender": function (data, type, row) {
                             return "<a href='/ProductIncentivo/Atualize/" + data + "' class = 'glyphicon glyphicon-refresh pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Ncm' /> "+
                                    "<a href='/ProductIncentivo/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Ncm' /> "
                        }
                    }
                ]
            });
        });
    </script>
}
<script type="text/javascript">
    $(document).ready(function () {

        $('.showImport').click(function () {
            console.log($(this).attr('id'));
            $.get('ProductIncentivo/Import/' + $(this).attr('id'), function (html) {
                $('#formShow .modal-body').empty();
                $('#formShow .modal-body').append($(html));
                $('#formShow').modal('show');
            });

        });


        $("#tblIndex").on("change", ".active", function () {
            try {

                $.ajax({
                    url: '@(Url.Action("UpdateActive", "ProductIncentivo"))',
                    dataType: 'json',
                    type: 'post',
                    contentType: 'application/json',
                    data: JSON.stringify({ "Id": $(this).prop('id'), "Active": $(this).prop('checked') }),
                    processData: false,
                    success: function (data, textStatus, jQxhr) {

                    },
                    error: function (jqXhr, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });

            } catch (e) {
                console.log(e);
            }
        });
    });

</script>

