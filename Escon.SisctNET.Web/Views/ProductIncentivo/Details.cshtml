@model IEnumerable<Escon.SisctNET.Model.ProductIncentivo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" asp-route-companyId="@ViewBag.Id" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Novos Clientes</strong></h3>
    </div>
    <div class="box-body">
        <div style="width:100%; padding:20px;">
            @if (ViewBag.Count == 0)
            {
                <h4>Não há produtos para tributar</h4>
            }
            else
            {
                <h4>@ViewBag.Count Produtos</h4>

                <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
                    @if (ViewBag.TypeCompany == true)
                    {
                        <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Code)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ncm)
                                    </th>
                                    <th>
                                        Tributado
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TypeTaxation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ncm)
                                        </td>
                                        <td>
                                            @Html.CheckBoxFor(modelItem => item.Active, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_offstyle = "danger", @data_onstyle = "success", @readonly = "true", @id = item.Id, onclick = "return alert()", @class = "active", @disabled = "true" })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TypeTaxation)
                                        </td>
                                        <td style="width:50px;">
                                            @Html.ActionLink(" ", "Product", new { id = item.Id, count = ViewBag.Count }, new { @class = "fa fa-calculator pull-left", @style = "margin-left:10px; margin-bottom:10px;" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Code)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ncm)
                                    </th>
                                    <th>
                                        Tributado
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TypeTaxation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateStart)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateEnd)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ncm)
                                        </td>
                                        <td>
                                            @Html.CheckBoxFor(modelItem => item.Active, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_offstyle = "danger", @data_onstyle = "success", @readonly = "true", @id = item.Id, onclick = "return alert()", @class = "active", @disabled = "true" })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TypeTaxation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateStart)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateEnd)
                                        </td>
                                        <td style="width:50px;">
                                            @Html.ActionLink(" ", "Product", new { id = item.Id, count = ViewBag.Count }, new { @class = "fa fa-calculator pull-left", @style = "margin-left:10px; margin-bottom:10px;" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }

                </div>

            }
        </div>
    </div>
    <div class="box-footer"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $("#tblIndex").on("change", ".active", function(){
            try {

                $.ajax({
                url: '@(Url.Action("UpdateActive", "Client"))',
                dataType: 'json',
                type: 'post',
                contentType: 'application/json',
                data: JSON.stringify({ "Id": $(this).prop('id'), "Active": $(this).prop('checked') }),
                processData: false,
                success: function (data, textStatus, jQxhr) {

                },
                error: function (jqXhr, textStatus, errorThrown) {
                    alert(errorThrown);
                }
                });

            } catch (e) {
                console.log(e);
            }
        });

    })

</script>