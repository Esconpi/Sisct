@model IEnumerable<Escon.SisctNET.Model.ProductIncentivo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="HomeExit" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Produto</strong>
        </h3>
        <div class="btn-group pull-right">
            @Html.ActionLink("Relação de Produtos", "Lista", new { id = @ViewBag.Comp.Id }, new { @class = "btn btn-primary" })

            <a href="#" id=@ViewBag.Comp.Id class="btn btn-primary showImport">
                <i class="fa fa-cloud-upload"></i>
                Importar
            </a>
        </div>
        <div style="width:100%; text-align:center;">
            <strong>@ViewBag.Comp.SocialName - @ViewBag.Comp.Document</strong>
        </div>
    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

            <table class="table table-striped table-bordered" id="tblProductIncentivo" style="width:100%">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ncm)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cest)
                        </th>
                        <th>
                            Tributado
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TypeTaxation)
                        </th>

                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
    <div class="box-footer"></div>
</div>
<div class="modal modal_default fade in" id="formShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4><strong>Detalhe da Tributação</strong></h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('.showImport').click(function () {
            console.log($(this).attr('id'));
            $.get('/ProductIncentivo/Import/' + $(this).attr('id'), function (html) {
                $('#formShow .modal-body').empty();
                $('#formShow .modal-body').append($(html));
                $('#formShow').modal('show');
            });

        });

    });
</script>
@if (SessionManager.GetPersonInSession().ProfileId.Equals(1))
