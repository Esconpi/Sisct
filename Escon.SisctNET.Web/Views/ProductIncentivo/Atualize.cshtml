@model Escon.SisctNET.Model.ProductIncentivo

@{
    ViewData["Title"] = "Atualize";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">

        <a asp-controller="ProductIncentivo" asp-action="Index" asp-route-id="@ViewBag.CompanyId" siize="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Tributação</strong></h3>
    </div>
    <div class="box-body">
        <div class="col-lg-12">
            <form asp-action="Atualize" method="post">
                <div class="row">
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" readonly />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-10 col-md-6 col-xs-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-3 col-md-6 col-xs-12">
                        <label asp-for="Ncm" class="control-label"></label>
                        <input asp-for="Ncm" class="form-control" readonly />
                        <span asp-validation-for="Ncm" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label asp-for="Cest" class="control-label"></label>
                        <input asp-for="Cest" class="form-control" readonly />
                        <span asp-validation-for="Cest" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-3 col-md-6 col-xs-12">
                        <label class="control-label">Produto</label>
                        <input asp-for="TypeTaxation" class="form-control" readonly />
                    </div>
                    @if (Model.TypeTaxation != "Incentivado")
                    {
                        <div class="form-group col-lg-2 col-md-6 col-xs-12">
                            <label asp-for="Percentual" class="control-label"></label>
                            <input name="percentual" class="form-control money" readonly />
                        </div>
                        <div class="form-group col-lg-2 col-md-6 col-xs-12">
                            <label asp-for="DateStart" class="control-label"></label>
                            <input asp-for="DateStart" name="datestart" class="form-control" readonly />
                        </div>

                    }
                    else
                    {
                        <div class="form-group col-lg-2 col-md-6 col-xs-12">
                            <label asp-for="Percentual" class="control-label"></label>
                            <input name="percentual" id="percentual" class="form-control money" />
                        </div>
                        <div class="form-group col-lg-2 col-md-6 col-xs-12">
                            <label asp-for="DateStart" class="control-label"></label>
                            <input asp-for="DateStart" name="datestart" id="datestart" class="form-control" />
                        </div>
                    }

                </div>
                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Tributar" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>

    </div>
</div>
