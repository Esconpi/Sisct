@model Escon.SisctNET.Model.Company

@{
    ViewData["Title"] = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header" id="hiddenHeader">
        <a asp-controller="ProductIncentivo" asp-action="IndexAll" asp-route-id="@SessionManager.GetCompanyIdInSession()" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"> <strong>Importar Produto:</strong> @Html.DisplayFor(model => model.SocialName) - @Html.DisplayFor(model => model.Document) </h3>

    </div>
    <div class="box-body" id="hiddenBody">
        <div class="col-lg-12">
            <form asp-controller="ProductIncentivo" asp-action="Import" method="post">
                <input type="hidden" name="companyid" value="@Html.DisplayFor(model => model.Id)" />

                <div class="row">
                    <div class="form-group col-lg-1 col-md-1 col-xs-12">
                        <label class="control-label">Ano</label>
                        <input type="text" name="year" class="form-control" value="@DateTime.Now.ToString("yyyy").ToString()" />
                    </div>
                    <div class="form-group col-lg-3 col-md-4 col-xs-12">
                        <label class="control-label">Mês</label>
                        <select name="month" class="form-control selectoption">
                            <option value="Janeiro">Janeiro</option>
                            <option value="Fevereiro">Fevereiro</option>
                            <option value="Março">Março</option>
                            <option value="Abril">Abril</option>
                            <option value="Maio">Maio</option>
                            <option value="Junho">Junho</option>
                            <option value="Julho">Julho</option>
                            <option value="Agosto">Agosto</option>
                            <option value="Setembro">Setembro</option>
                            <option value="Outubro">Outubro</option>
                            <option value="Novembro">Novembro</option>
                            <option value="Dezembro">Dezembro</option>
                        </select>
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-xs-12">
                        <label class="control-label">Arquivo</label>
                        <select name="arquivo" class="form-control selectoption">
                            <option value="xmlS" selected>XML SEFAZ</option>
                            <option value="xmlE">XML EMPRESA</option>
                        </select>
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-xs-12">
                        <br />
                        <input type="submit" value="Confirmar" class="btn btn-success pull-left" onclick="show()" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div style="text-align:center; display:none;" id="loading">
        <img src="~/img/carregando.gif" />
    </div>
</div>

<script>
    function show() {
        document.getElementById('loading').style.display = 'block';
        document.getElementById('hiddenHeader').style.display = 'none';
        document.getElementById('hiddenBody').style.display = 'none';
    }
</script>
