@model Escon.SisctNET.Model.ProductIncentivo

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">

            <a asp-controller="ProductIncentivo" asp-action="Details" asp-route-companyId="@ViewBag.CompanyId" asp-route-count="@ViewBag.Count" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
            <h3 class="box-title"><strong>Tributação</strong></h3>
        </div>
        <div class="box-body">
            <div class="col-lg-12">
                <form asp-action="Product" method="post">
                    <input type="hidden" name="count" value="@ViewBag.Count"/>
                    <div class="row">
                        <div class="form-group col-lg-12 col-md-12 col-xs-12">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" readonly />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-3 col-md-6 col-xs-12">
                            <label asp-for="Code" class="control-label"></label>
                            <input asp-for="Code" class="form-control" readonly />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-2 col-md-6 col-xs-12">
                            <label asp-for="Ncm" class="control-label"></label>
                            <input asp-for="Ncm" class="form-control" readonly />
                            <span asp-validation-for="Ncm" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3 col-md-6 col-xs-12">
                            <label class="control-label">Produto</label>
                            <select class="form-control selectoption" name="taxation">
                                <option value="Incentivado" selected>Incentivado</option>
                                <option value="ST">ST</option>
                                <option value="Isento">Isento</option>
                            </select>
                        </div>
                        <div class="form-group col-lg-2 col-md-6 col-xs-12">
                            <label class="control-label">Tributar</label>
                            <select class="form-control selectoption" name="type">
                                <option value="1" selected>Por Código</option>
                                <option value="2">Por Ncm</option>
                            </select>
                        </div>
                        @if (ViewBag.TypeCompany == false)
                        {
                            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                                <label asp-for="Percentual" class="control-label"></label>
                                <input name="percentual" class="form-control money" readonly />
                            </div>
                        }
                        else
                        {
                            <div class="form-group col-lg-2 col-md-6 col-xs-12">
                                <label asp-for="Percentual" class="control-label"></label>
                                <input name="percentual" class="form-control money" />
                            </div>
                        }
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <input type="submit" value="Tributar" class="btn btn-success pull-right" />
                    </div>
                </form>
            </div>

        </div>
    </div>