@model Escon.SisctNET.Model.InternalAliquotConfaz

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Nova Aliquota</strong>
        </h3>

    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-lg-12 col-md-1 col-xs-12">
                        <label asp-for="AnnexId" class="control-label"></label>
                        <select asp-items="@ViewBag.AnnexId" name="AnnexId" class="form-control selectoption"></select>
                        <span asp-validation-for="AnnexId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-lg-8 col-md-6 col-xs-12">
                        <label asp-for="StateId" class="control-label"></label>
                        <select asp-items="@ViewBag.StateId" name="StateId" class="form-control selectoption"></select>
                        <span asp-validation-for="StateId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-2 col-md-3 col-xs-12">
                        <label asp-for="Aliquota" class="control-label"></label>
                        <input type="text" id="aliquota" name="aliquota" class="form-control money" required />
                    </div>

                    <div class="form-group col-lg-2 col-md-3 col-xs-12">
                        <label asp-for="DateStart" class="control-label"></label>
                        <input asp-for="DateStart" class="form-control" />
                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Cadastrar" class="btn btn-success pull-right" />
                </div>

            </form>
        </div>
    </div>
    <div class="box-footer">
    </div>
</div>


