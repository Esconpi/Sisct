@model Escon.SisctNET.Model.AccountPlanTypeGroup

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <b>Novo  Grupo do Tipo de Conta</b>
        </h3>

    </div>
    <hr />
    <div class="box-body">

        <div class="col-md-12">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" class="form-control" type="hidden" />

                <div class="row">
                    <div class="form-group col-lg-12 col-md-6 col-xs-12">
                        @Html.LabelFor(model => model.Active, "Ativo", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.Active, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "primary", @readonly = "true" })
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-lg-12 col-md-6 col-xs-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Confirmar" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>

    </div>
    <div class="box-footer">

    </div>
</div>