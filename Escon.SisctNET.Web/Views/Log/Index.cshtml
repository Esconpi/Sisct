@model IEnumerable<Escon.SisctNET.Model.Log>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title"><strong>Logs</strong></h3>
    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered" id="tblLog" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PersonId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FunctionalityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Occurrenceid)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.Created)</th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PersonId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FunctionalityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Occurrenceid)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.Created)</th>
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>
    <div class="box-footer"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#tblLog tfoot th').each(function () {
            var title = $(this).text().trim();
            $(this).html('<input type="text" placeholder="' + title +'"/>');
        });

       var table = $('#tblLog').DataTable({
            searchDelay: 300,
            "fnDrawCallback": function (oSettings) {
                $('.showDetail').off();
                $('.showProduct').off();
                $('[data-toggle="tooltip"]').tooltip();
                $("input[type='checkbox']").bootstrapToggle();
            },
            "processing": true,
            "ordering": false,
            "serverSide": true,
            "oLanguage": {
                "sProcessing": "Aguarde enquanto os dados são carregados ...",
                "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                "sZeroRecords": "Nenhum registro disponível",
                "sInfoEmpty": "Exibindo 0 a 0 de 0 registros",
                "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                "sInfoFiltered": "",
                "sSearch": "Buscar",
                "oPaginate": {
                    "sFirst": "Primeiro",
                    "sPrevious": "Anterior",
                    "sNext": "Próximo",
                    "sLast": "Último"
                }
            },
            "ajax": "/Log/GetAll",
            "initComplete": function (settings, json) {
            },
            "columns": [
                { "data": "person" },
                { "data": "functionality" },
                { "data": "occurrence" },
                { "data": "date" },
            ]
       });

        table.columns().every(function () {
            $('input', this.footer()).on('keyup change', function () {
                if (table.search() !== this.value) {
                    table
                        .search(this.value)
                        .draw();
                }
            });
        });
    });
</script>

