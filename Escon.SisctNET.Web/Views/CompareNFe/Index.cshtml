@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <div style="width:100%; overflow:hidden; padding:20px;">
            <div>
                <img src="~/img/logo-sisct.png" style="width:25%; height:60%; float:left;" />
                <img src="~/img/escon.png" style="width:20%; height:50%; float:right;" />
            </div>
        </div>

        <div style="text-align:center;">
            <strong>@ViewBag.SocialName - @ViewBag.Document</strong>
        </div>
        <div style="width:100%; overflow:hidden; padding:20px;">
            <div style="float:left;">Periodo: @ViewBag.Mes/@ViewBag.Ano</div>
            <div style="float:right;">Data: @DateTime.Now.ToString("dd/MM/yyyy")</div>
        </div>
    </div>
    <div class="box-body">
        <div style="width:100%;font-size:11px; padding:20px;">
                <table class="table table-striped table-bordered" style="width:100%;font-size:10px;">
                    <thead>
                        <tr>
                            <th>
                                Data
                            </th>
                            <th>
                                Tipo
                            </th>
                            <th>
                                UF
                            </th>
                            <th>
                                Nota
                            </th>
                            <th>
                                CNPJ
                            </th>
                            <th>
                                Nome
                            </th>
                            <th>
                                Valor
                            </th>
                            <th>
                                Chave
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < ViewBag.Notas.Count; i++)
                        {
                            <tr>
                                <td>
                                    @ViewBag.Notas[i][1]["dhEmi"]
                                </td>
                                <td>
                                    @ViewBag.Notas[i][1]["tpNF"]
                                </td>
                                <td>
                                    @ViewBag.Notas[i][2]["UF"]
                                </td>
                                <td>
                                    @ViewBag.Notas[i][1]["nNF"]
                                </td>
                                <td>
                                    @ViewBag.Notas[i][2]["CNPJ"]
                                </td>
                                <td>
                                    @ViewBag.Notas[i][2]["xNome"]
                                </td>
                                <td>
                                    @ViewBag.Notas[i][4]["vNF"]
                                </td>
                                <td>
                                    @ViewBag.Notas[i][0]["chave"]
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

                <div style="float:left;">
                    <h6><strong>@ViewBag.Notas.Count registro(s)</strong></h6>
                </div>
        </div>
    </div>
    <div class="box-footer"></div>
</div>