@model IEnumerable<Escon.SisctNET.Model.State>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title"><strong>Aliquotas Estados Cadastradas</strong></h3>

            <div class="btn-group pull-right">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fa fa-plus"></i>
                    Nova Aliquota
                </a>
            </div>

        </div>
        <div class="box-body">
            <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

                <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UfOrigem)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UfDestino)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Aliquota)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.DateStart)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateEnd)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UfOrigem)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UfDestino)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Aliquota)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateStart)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateEnd)
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "Delete", new { id = item.Id },
                                        new { onclick = "return confirm('Deseja exluir esse registro?');", @class = "glyphicon glyphicon-trash pull-left", @style = "margin-left:10px; margin-bottom:10px;" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div class="box-footer"></div>
    </div>