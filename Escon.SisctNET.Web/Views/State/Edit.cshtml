@model Escon.SisctNET.Model.State

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Editar Aliquota:</strong> @Model.Aliquota</h3>
    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-lg-4 col-md-6 col-xs-12">
                        <label asp-for="UfOrigem" class="control-label"></label>
                        <input asp-for="UfOrigem" class="form-control" />
                        <span asp-validation-for="UfOrigem" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-md-6 col-xs-12">
                        <label asp-for="UfDestino" class="control-label"></label>
                        <input asp-for="UfDestino" class="form-control" />
                        <span asp-validation-for="UfDestino" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label asp-for="Aliquota" class="control-label"></label>
                        <input type="text" id="aliquota" value="@Model.Aliquota" class="form-control money" />
                    </div>

                    <div class="form-group col-lg-2 col-md-6 col-xs-12">
                        <label asp-for="DateStart" class="control-label"></label>
                        <input asp-for="DateStart" class="form-control" />
                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Alterar" class="btn btn-success pull-right" />
                </div>

            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>


