@model Escon.SisctNET.Model.Client

@{
    ViewData["Title"] = "Filter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <a asp-action="Index" asp-route-companyid="@ViewBag.Id" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
            <h3 class="box-title"><strong>Cliente - </strong> @Model.Name</h3>
        </div>
        <div class="box-body">
            <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
                <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Document)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ie)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TypeClientId)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Document)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Ie)
                            </td>
                            @if (Model.TypeClientId == 1)
                            {
                                <td style="color:blue">
                                    @Html.DisplayFor(modelItem => Model.TypeClient.Name)
                                </td>
                            }
                            else if (Model.TypeClientId == 2)
                            {
                                <td style="color:red">
                                    @Html.DisplayFor(modelItem => Model.TypeClient.Name)
                                </td>
                            }
                            else if (Model.TypeClientId == 3)
                            {
                                <td style="color:orange">
                                    @Html.DisplayFor(modelItem => Model.TypeClient.Name)
                                </td>
                            }
                        </tr>
                        
                    </tbody>
                </table>

            </div>
        </div>
        <div class="box-footer"></div>
    </div>