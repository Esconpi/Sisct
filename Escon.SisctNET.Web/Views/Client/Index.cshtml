@model IEnumerable<Escon.SisctNET.Model.Client>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="HomeExit" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Clientes</strong> @ViewBag.SocialName - @ViewBag.Document</h3>
        <div class="btn-group pull-right">
            <a href="#" id=@ViewBag.Id class="btn btn-primary showAtualize">
                <i class="fa fa-refresh"></i>
                Atualizar
            </a>
        </div>

    </div>
    <div class="box-body">
       
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered" id="tblClient" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Document)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ie)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TypeClientId)
                        </th>
                        <th></th>
                    </tr>
                </thead>

            </table>

        </div>


    </div>
    <div class="box-footer"></div>
</div>

<div class="modal modal-primary fade in" id="formShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('.showAtualize').click(function () {
            console.log($(this).attr('id'));
            $.get('/Client/Atualize/' + $(this).attr('id'), function (html) {
                $('#formShow .modal-body').empty();
                $('#formShow .modal-body').append($(html));
                $('#formShow').modal('show');
            });

        });
      
     
    })

    $(document).ready(function () {
        $('#tblClient').DataTable({
            searchDelay: 300,
            "fnDrawCallback": function (oSettings) {
                $('.showDetail').off();
                $('.showProduct').off();
                $('[data-toggle="tooltip"]').tooltip();
                $("input[type='checkbox']").bootstrapToggle();

            },
            "processing": true,
            "ordering": false,
            "serverSide": true,
            "ajax": "/Client/GetAll",
            "initComplete": function (settings, json) {
            },
            "columns": [
                { "data": "name" },
                { "data": "document" },
                { "data": "ie" },
                {
                    "mData": "typeClient",
                    "mRender": function (data, type, row) {
                        if (data === 1) {
                            return "<p style = 'color:blue;'>Contribuite</p>"
                        }
                        else if (data === 2) {
                            return "<p style = 'color:red;'>Não Contribuite</p>"
                        }
                        else if (data === 3) {
                            return "<p style = 'color:orange;'>Produtor Rural</p>"
                        }
                    }
                },
                {
                    "mData": "id",
                    "mRender": function (data, type, row) {
                        return "<a href='/Client/Edit/" + data + "' class = 'glyphicon glyphicon-pencil pull-left' style = 'margin-left:10px; margin-bottom:10px;' data-toggle='tooltip' data-placement='top' title='Editar Cliente' /> "
                    }
                }
            ]
        });
    });

</script>