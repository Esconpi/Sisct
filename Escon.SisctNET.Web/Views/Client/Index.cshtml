@model IEnumerable<Escon.SisctNET.Model.Client>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="HomeExit" asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Clientes</strong></h3>
        <div class="btn-group pull-right">
            <a href="#" id=@ViewBag.Id class="btn btn-primary showAtualize">
                <i class="fa fa-refresh"></i>
                Atualizar
            </a>
        </div>
    </div>
    <div class="box-body">
        <div style="padding:20px">
            <div class="col-md-12">
                <form asp-action="Filter" method="post">
                    <div class="row">
                        <div class="form-group col-lg-12 col-md-12 col-xs-12">
                            <label class="control-label">Filter</label>
                            <select asp-items="@ViewBag.ClientId" name="id" class="form-control selectoption" id="client"></select>
                        </div>
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <input type="submit" value="Buscar" class="btn btn-success pull-right" />
                    </div>
                </form>
            </div>
        </div>
       
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
            <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Document)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ie)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Taxpayer)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Document)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ie)
                            </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => item.Taxpayer, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_offstyle = "danger", @data_onstyle = "success", @readonly = "true", @id = item.Id, onclick = "return alert()", @class = "active" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>


    </div>
    <div class="box-footer"></div>
</div>

<div class="modal modal-primary fade in" id="formShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $('.showAtualize').click(function () {
            console.log($(this).attr('id'));
            $.get('Client/Atualize/' + $(this).attr('id'), function (html) {
                $('#formShow .modal-body').empty();
                $('#formShow .modal-body').append($(html));
                $('#formShow').modal('show');
            });

        });
      
        $("#tblIndex").on("change", ".active", function(){
            try {

                $.ajax({
                url: '@(Url.Action("UpdateActive", "Client"))',
                dataType: 'json',
                type: 'post',
                contentType: 'application/json',
                data: JSON.stringify({ "Id": $(this).prop('id'), "Active": $(this).prop('checked') }),
                processData: false,
                success: function (data, textStatus, jQxhr) {

                },
                error: function (jqXhr, textStatus, errorThrown) {
                    alert(errorThrown);
                }
                });

            } catch (e) {
                console.log(e);
            }
        });

    })

</script>