@model IEnumerable<Escon.SisctNET.Model.Client>
@{
    ViewData["Title"] = "Contribuinte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <div style="width:100%; overflow:hidden; padding:20px;">
            <div class="row">
                <div class="col-lg-12">
                    <img src="~/img/sisCT.png" style="width:25%; height:60%; float:left;" />
                    <img src="~/img/escon.png" style="width:20%; height:50%; float:right;" />
                </div>
            </div>

        </div>

        <div style="width: 100%; text-align: center;">
            <strong>@ViewBag.Company.SocialName</strong> <br />
            <b>CNPJ: </b>@ViewBag.Company.Document <b>Insc. Estadual: </b> @ViewBag.Company.Ie
        </div>

        <div style="width:100%; overflow:hidden; padding:20px;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group col-lg-6 col-md-6 col-xs-12">
                        <strong>Contribuintes</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="box-body">
        <div style="width:100%; padding:20px;">
            <table class="table" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Document)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ie)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TypeClientId)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>

                            <td>@Html.DisplayFor(modelItem => item.Document)</td>

                            <td>@Html.DisplayFor(modelItem => item.Ie)</td>

                            <td>@Html.DisplayFor(modelItem => item.TypeClient.Name)</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
    <div class="box-footer"></div>
</div>


