@model IEnumerable<Escon.SisctNET.Model.Client>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" asp-route-companyId="@ViewBag.Id" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Novos Clientes</strong></h3>
    </div>
    <div class="box-body">
        <div style="width:100%; padding:20px;">
            @if (ViewBag.Count == 0)
            {
                <h4>Não foram encontrados novos clientes</h4>
            }
            else
            {
                <h4>Foram encontrados @ViewBag.Count novos clientes</h4>

                <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">
                    <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Document)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ie)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Taxpayer)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Document)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ie)
                                    </td>
                                    <td>
                                        @Html.CheckBoxFor(modelItem => item.Taxpayer, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_offstyle = "danger", @data_onstyle = "success", @readonly = "true", @id = item.Id, onclick = "return alert()", @class = "active" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

            }
        </div>
    </div>
    <div class="box-footer"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $("#tblIndex").on("change", ".active", function(){
            try {

                $.ajax({
                url: '@(Url.Action("UpdateActive", "Client"))',
                dataType: 'json',
                type: 'post',
                contentType: 'application/json',
                data: JSON.stringify({ "Id": $(this).prop('id'), "Active": $(this).prop('checked') }),
                processData: false,
                success: function (data, textStatus, jQxhr) {

                },
                error: function (jqXhr, textStatus, errorThrown) {
                    alert(errorThrown);
                }
                });

            } catch (e) {
                console.log(e);
            }
        });

    })

</script>