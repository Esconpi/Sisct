@model IEnumerable<Escon.SisctNET.Model.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title"><strong>Saída</strong></h3>
    </div>
    <div class="box-body">
        <div style="width:100%; overflow:hidden; overflow-x:scroll; padding:20px;">

            <table class="table table-striped table-bordered" id="tblIndex" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SocialName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FantasyName)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Document)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Incentive)
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SocialName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FantasyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Document)
                            </td>
                            <td>

                                @Html.CheckBoxFor(modelItem => item.Incentive, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_offstyle = "danger", @data_onstyle = "success", @readonly = "true", @id = item.Id, onclick = "return alert()", @disabled = "true" })

                            </td>
                            <td style="width:80px;">

                                @Html.ActionLink(" ", "Compare", "Company", new { id = item.Id, ident = "1" }, new { @class = "glyphicon glyphicon-duplicate pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Compara" })
                                <a href="#" id="@item.Id" class="showTaxation">
                                    <i class="fa fa-calculator pull-left" style="margin-left:10px; margin-bottom:10px;" data-toggle="tooltip" data-placement="top" title="Tributar Ncm"></i>
                                </a>

                                <a href="#" id="@item.Id" class="showTaxationProduct">
                                    <i class="fa fa-calculator pull-left" style="margin-left:10px; margin-bottom:10px; color:forestgreen" data-toggle="tooltip" data-placement="top" title="Tributar Produto"></i>
                                </a>
                                @Html.ActionLink(" ", "RelatoryExit", "Company", new { id = item.Id }, new { @class = "fa fa-file pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Gerar Relatório" })
                                @Html.ActionLink(" ", "Index", "Client", new { companyId = item.Id }, new { @class = "glyphicon glyphicon-list-alt pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Visualizar Clientes" })
                                @if (item.Incentive == true)
                                {
                                    @Html.ActionLink(" ", "Details", "Company", new { id = item.Id, type = 1 }, new { @class = "glyphicon glyphicon-briefcase pull-left", @style = "margin-left:10px; margin-bottom:10px;", @data_toggle = "tooltip", @data_placement = "top", @title = "Visualizar Incentivo" })

                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="box-footer"></div>
</div>

<div class="modal modal-primary fade in" id="formShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $('.showTaxation').click(function () {
            $.get('Company/TaxationNcm/' + $(this).attr('id'), function (html) {
                $('#formShow .modal-body').empty();
                $('#formShow .modal-body').append($(html));
                $('#formShow').modal('show');
            });

        });
    })

      $(document).ready(function () {

        $('.showTaxationProduct').click(function () {
            $.get('Company/TaxationProduct/' + $(this).attr('id'), function (html) {
                $('#formShow .modal-body').empty();
                $('#formShow .modal-body').append($(html));
                $('#formShow').modal('show');
            });

        });
    })

</script>