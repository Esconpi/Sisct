
<style>
    .table {
        margin-bottom: 5px;
    }

        .table > thead > tr > th {
            border-bottom: 2px solid;
        }

        .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
            border: 1px solid;
            line-height: 0.2;
            padding: 5px;
        }
</style>

<table class="table" style="font-size:12px; border:1px solid">
    <thead>
        <tr>
            <th style="border: 1px solid; text-align: center; width:80%;">
                NCM
            </th>
            <th style="border: 1px solid; text-align: center;">
                XML
            </th>
            <th style="border: 1px solid; text-align: center;">
                SisCT
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ncm in ViewBag.Ncms)
        {


            <tr style="border:1px solid;">
                <td style="border:1px solid; padding-left:1%;">
                    @if (ncm[1].Length > 100)
                    {
                         @ncm[1].Substring(0,100)
                    }
                    else{
                        @ncm[1]
                    }

                </td>
                <td style="border:1px solid; padding-left:1%;">
                    @ncm[2]
                </td>
                <td style="border:1px solid; padding-left:1%;">
                    @ncm[3]
                </td>
            </tr>


            <tr>
                <th style="border: 1px solid; text-align: center;" colspan="3">Produto</th>
            </tr>

            @foreach (var prod in ViewBag.Produtos)
            {
                @if (ncm[0] == prod[0])
                {
                    <tr>
                        <td style="border:1px solid; padding-left:1%;" colspan="3">
                            @prod[1] - @prod[2]
                        </td>
                    </tr>
                }

            }
        }
    </tbody>
</table>