<table class="table" style="font-size:10px; border:1px solid">
    <thead>
        <tr>
            <th style="border: 1px solid; text-align: center;">
                NCM
            </th>
            <th style="border: 1px solid; text-align: center;">
                Descrição
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor Produto
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor PIS
            </th>

            <th style="border:1px solid; text-align:center;">
                Valor Cofins
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.Ncm.Count; i++)
        {
            <tr>
                <td style="padding-left:1%; border: 1px solid;">@ViewBag.Ncm[i][0]</td>
                <td style="padding-left:1%; border: 1px solid;">@ViewBag.Ncm[i][1]</td>
                <td style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.Ncm[i][4].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</td>
                <td style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.Ncm[i][2].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</td>
                <td style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.Ncm[i][3].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th style="border: 1px solid; text-align: center;" colspan="2">Total</th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.ValorProduto)</th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.ValorPis)</th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.ValorCofins)</th>
        </tr>
    </tfoot>
</table>