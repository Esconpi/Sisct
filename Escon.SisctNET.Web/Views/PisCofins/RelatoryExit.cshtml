
@{
    ViewData["Title"] = "RelatoryExit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="box box-primary">
        <div class="box-header">
            <div style="width:100%; overflow:hidden; padding:20px;">
                <div class="row">
                    <div class="col-lg-12">
                        <img src="~/img/logo-sisct.png" style="width:25%; height:60%; float:left;" />
                        <img src="~/img/escon.png" style="width:20%; height:50%; float:right;" />
                    </div>
                </div>

            </div>

            <div style="text-align:center;">
                <strong>@ViewBag.SocialName - @ViewBag.Document</strong>
            </div>

            <div style="width:100%; overflow:hidden; padding:20px;">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group col-lg-6 col-md-6 col-xs-12">
                            @if (ViewBag.Type == "resumoncm")
                            {
                                <strong>Resumo por NCM Monofásico</strong>
                            }
                        </div>
                        <div class="form-group col-lg-6 col-md-6 col-xs-12" style="text-align:right;">
                            <strong>Periodo: @ViewBag.Month/@ViewBag.Year </strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div style="width:100%; padding:20px;">
                @if (ViewBag.Type == "resumoncm")
                {
                    <table border="1">
                        <thead>
                            <tr style="border:1px solid;">
                                <th style="text-align:center" width="120px">
                                    NCM
                                </th>
                                <th style="border: 1px solid; text-align: center;" width="660px">
                                    Descrição
                                </th>
                                <th style="border:1px solid; text-align:center;" width="140px">
                                    Valor PIS
                                </th>

                                <th style="border:1px solid; text-align:center;" width="140px">
                                    Valor Cofins
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < ViewBag.Ncm.Count; i++)
                            {
                                <tr>
                                    <td style="padding-left:1%">@ViewBag.Ncm[i][0]</td>
                                    <td style="padding-left:1%">@ViewBag.Ncm[i][1]</td>
                                    <td style="padding-right:1%; text-align:right;">@ViewBag.Ncm[i][2]</td>
                                    <td style="padding-right:1%; text-align:right;">@ViewBag.Ncm[i][3]</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th style="text-align:center;">Total</th>
                                <td style="padding-left:1%"></td>
                                <th style="padding-right:1%; text-align:right;">@ViewBag.ValorPis</th>
                                <th style="padding-right:1%; text-align:right;">@ViewBag.ValorCofins</th>
                            </tr>
                        </tfoot>
                    </table>
                }
            </div>
        </div>
    </div>

