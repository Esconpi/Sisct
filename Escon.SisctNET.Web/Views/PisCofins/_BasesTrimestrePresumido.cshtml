
<table class="table" style="font-size:10px;page-break-before: always;">
    <thead>
        <tr>
            <th style="text-align:center;border:1px solid;font-size:11px;" width="5%">
                @ViewBag.Year
            </th>
            <th style="text-align:center;border:1px solid;" colspan="5">
                BASE DE CÁLCULO PARA O PIS E COFINS
            </th>

            <th style="text-align:center;border:1px solid;" colspan="4">
                BASE DE CÁLCULO PARA A CSLL E IRPJ
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th style="text-align:center;border:1px solid;">
                MÊS
            </th>
            <th style="text-align:center;border:1px solid;">
                RECEITAS
            </th>
            <th style="text-align:center;border:1px solid;">
                <span style="font-size:11px;">(-)</span> <br /> RECEITA MONO, ALIQ ZERO e ST
            </th>
            <th style="text-align:center;border:1px solid;">
                <span style="font-size:11px;">(-)</span> <br /> DEVOLUÇÃO NORMAL
            </th>
            <th style="text-align:center;border:1px solid;">
                <span style="font-size:11px;">(-)</span> <br /> REDUÇÂO ICMS
            </th>
            <th style="text-align:center;border:1px solid;">
                <span style="font-size:11px;">(=)</span> <br />  BC P/ PIS E COFINS
            </th>
            <th style="text-align:center;border:1px solid;">
                COMBUSTÍVEL
            </th>
            <th style="text-align:center;border:1px solid;">
                COMÉRCIO
            </th>
            <th style="text-align:center;border:1px solid;">
                TRASNPORTE
            </th>
            <th style="text-align:center;border:1px solid;">
                SERVIÇO 
            </th>
        </tr>
        @foreach (var item in ViewBag.Impostos)
        {
            <tr style="font-size:10px;">
                <td style="text-align:center;border:1px solid; text-transform:uppercase">
                    @item[0]
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[9]))
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[10]))
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[11]))
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[12]))
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[13]))
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[14]))
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[15]))
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[16]))
                </td>
                <td style="text-align:right;border:1px solid;padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[17]))
                </td>
            </tr>
        }
        <tr style="font-size:10px;">
            <th style="text-align:center;border:1px solid;">
                TOTAL
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.Receitas)
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.ReceitasMono)
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.DevolucaoNormal)
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.ReducaoIcms)
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.BaseCalcPisCofins)
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.BaseCalcCsllIrpj1)
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.BaseCalcCsllIrpj2)
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.BaseCalcCsllIrpj3)
            </th>
            <th style="text-align:right;border:1px solid;padding-right:1%;">
                @string.Format("{0:N}", ViewBag.BaseCalcCsllIrpj4)
            </th>
        </tr>
    </tbody>
</table>