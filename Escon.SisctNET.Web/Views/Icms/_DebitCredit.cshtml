<table class="table" style="font-size:11px; border:1px solid">
    <thead>
        <tr>
            <th style="border: 1px solid; text-align: center;" colspan="3">
                Débito/Saída
            </th>
        </tr>
        <tr>
            <th style="border: 1px solid; text-align: center;">
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor Contábil
            </th>
            <th style="border: 1px solid; text-align: center;">
                ICMS
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th style="border: 1px solid; text-align: center;">
                Venda
            </th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.Vendas)</th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.Debito)</th>
        </tr>
        <tr>
            <th style="border: 1px solid; text-align: center;">
                Devolução
            </th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.DevolucaoVendas)</th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.DevolucaoDebito)</th>
        </tr>
        <tr>
            <th style="border: 1px solid; text-align: center;">
                Saldo
            </th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.ValorContabilSaida)</th>
            <th style="padding-right:1%; text-align:right; border: 1px solid;">@string.Format("{0:N}", ViewBag.SaldoDebito)</th>
        </tr>
    </tbody>
</table>

