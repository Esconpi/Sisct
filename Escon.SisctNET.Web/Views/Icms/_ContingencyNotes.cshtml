
<style>
    .table {
        margin-bottom: 5px;
    }

    .table > thead > tr > th {
        border-bottom: 2px solid;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        border: 1px solid;
        line-height: 0.2;
        padding: 5px;
    }
</style>

<table class="table" style="border:1px solid;">
    <thead>
        <tr style="border:1px solid;">
            <th style="border:1px solid; text-align:center;">
                Data
            </th>
            <th style="border:1px solid; text-align:center;">
                Nº Nota
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor
            </th>
            @if(ViewBag.Type == "notaContigenciaIcms")
            {
                <th style="border:1px solid; text-align:center;">
                    ICMS
                </th>
            }
            <th style="border:1px solid; text-align:center;">
                Chave
            </th>
        </tr>
    </thead>
    <tbody style="font-size:11px;">
        @foreach (var item in ViewBag.Notas)
        {
            <tr style="border:1px solid;">
                <td style="border:1px solid; padding-left:1%;">
                    @item[1]["dhEmi"]
                </td>
                <td style="border:1px solid; padding-left:1%;">
                    @item[1]["nNF"]
                </td>
                <td style="border:1px solid; padding-left:1%; padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(item[3]["vNF"].Replace(',', '*').Replace('.', ',').Replace('*', '.')))
                </td>
                @if(ViewBag.Type == "notaContigenciaIcms")
                {
                   <td style="border:1px solid; padding-left:1%; padding-right:1%;">
                        @string.Format("{0:N}", Convert.ToDecimal(item[3]["vICMS"].Replace(',', '*').Replace('.', ',').Replace('*', '.')))
                    </td>
                }             
                <td style="border:1px solid; padding-left:1%; padding-right:1%;">
                    @item[0]["chave"]
                </td>
            </tr>
        }


        <tr style="border:1px solid;">
            <th style="border:1px solid; padding-left:1%;" colspan="2">
                TOTAL
            </th>
            <th style="border:1px solid; padding-left:1%;">
                @string.Format("{0:N}", Convert.ToDecimal(ViewBag.Total))
            </th>
            @if(ViewBag.Type == "notaContigenciaIcms")
            {
               <th style="border:1px solid; padding-left:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(ViewBag.Icms))
               </th>   
            }
            <th style="border:1px solid; padding-left:1%;">
            </th>
        </tr>
    </tbody>
</table>

<div class="col-lg-12">
    <h6>
        <strong>
            @ViewBag.Notas.Count registro(s)
        </strong>
    </h6>
</div>