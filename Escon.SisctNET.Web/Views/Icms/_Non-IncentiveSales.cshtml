<table style="border:1px solid;">
    <thead>
        <tr style="border:1px solid;">
            <th style="border:1px solid; text-align:center;" width="100px">
                CFOP
            </th>
            <th style="border:1px solid; text-align:center;">
                Descrição
            </th>
            <th style="border:1px solid; text-align:center;" width="150px">
                Valor Contábil
            </th>
            <th style="border:1px solid; text-align:center;" width="150px">
                Base de Cálculo Icms
            </th>
            <th style="border:1px solid; text-align:center;" width="120px">
                Valor Icms
            </th>
            <th style="border:1px solid; text-align:center;" width="120px">
                Valor Fecop
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.CfopNIncentivo.Count; i++)
        {
            <tr style="border:1px solid;">
                <td style="border:1px solid; padding-left:1%;">
                    @ViewBag.CfopNIncentivo[i][0]
                </td>
                <td style="border:1px solid; padding-left:1%;">
                    @ViewBag.CfopNIncentivo[i][1]
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:C}", Convert.ToDecimal(ViewBag.CfopNIncentivo[i][2].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(ViewBag.CfopNIncentivo[i][3].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:C}", Convert.ToDecimal(ViewBag.CfopNIncentivo[i][4].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:C}", Convert.ToDecimal(ViewBag.CfopNIncentivo[i][5].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
            </tr>
        }
    </tbody>
</table>
