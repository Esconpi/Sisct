<div style="width:100%; padding-top:10px;">
    <table style="font-size:14px;" border="1">
        <thead style="font-size:14px;">
            <tr>
                <th style="text-align:center" width="50%">Histórico</th>
                <th style="text-align:center">Valor (R$)</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td style="text-align:center">Total Saída</td>
                <td style="text-align:right; padding-right:10px;">@string.Format("{0:N}", ViewBag.TotalVendas)</td>
                <td></td>
            </tr>
            <tr>
                <td style="text-align:center">Saída Incentivada</td>
                <td style="text-align:right; padding-right:10px">@string.Format("{0:N}", ViewBag.TotalVendasIncentivadas)</td>
                <td></td>
            </tr>
            <tr>
                <td style="text-align:center">Saída não Incentivada</td>
                <td style="text-align:right; padding-right:10px;">@string.Format("{0:N}", ViewBag.TotalVendasNIncentivadas)</td>
                <td></td>
            </tr>
            <tr>
                <th>
                    <table border="1">
                        <tr>
                            <th style="text-align:center" width="1100px">Cálculo ICMS Normal</th>
                        </tr>
                        <tr>

                            <th>
                                <table border="1">
                                    <tr>
                                        <th style="text-align:center" width="500px">Base de Cálculo ICMS</th>
                                        <th style="text-align:center" width="200px">ICMS %</th>
                                        <th style="text-align:center" width="400px">ICMS (R$)</th>
                                    </tr>

                                </table>
                            </th>
                        </tr>
                        @for (int i = 0; i < ViewBag.ValoresIncentivo.Count; i++)
                        {
                            <tr>

                                <th>
                                    <table>
                                        <tr>
                                            <td style="text-align:right; padding-right: 30px; font-weight: normal;" width="500px">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.ValoresIncentivo[i][0]))</td>
                                            <td style="text-align:center; font-weight: normal" width="200px">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.ValoresIncentivo[i][1]))</td>
                                            <td style="text-align:right; padding-right: 10px; font-weight: normal;" width="400px">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.ValoresIncentivo[i][2]))</td>
                                        </tr>

                                    </table>
                                </th>
                            </tr>
                        }

                        <tr>
                            <th>
                                <table>
                                    <tr>
                                        <th style="text-align:center" width="500px">Valor débito ICMS (R$)</th>
                                        <th style="text-align:center" width="200px">&nbsp;</th>
                                        <td style="text-align:right; padding-right: 10px;" width="400px">@string.Format("{0:N}", ViewBag.DebitoIncentivo)</td>
                                    </tr>

                                </table>
                            </th>
                        </tr>

                    </table>
                </th>
                <th>
                    <table border="1">
                        <tr>
                            <th style="text-align:center" width="1100px">Cálculo ICMS não Incentivado</th>
                        </tr>
                        <tr>
                            <th>
                                <table border="1">
                                    <tr>
                                        <th style="text-align:center" width="500px">Base de Cálculo ICMS</th>
                                        <th style="text-align:center" width="200px">ICMS %</th>
                                        <th style="text-align:center" width="400px">ICMS (R$)</th>
                                    </tr>
                                </table>
                            </th>
                        </tr>
                        @for (int i = 0; i < ViewBag.ValoresNIncentivo.Count; i++)
                        {
                            <tr>

                                <th>
                                    <table>
                                        <tr>
                                            <td style="text-align:right; padding-right: 30px; font-weight: normal;" width="500px">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.ValoresNIncentivo[i][0]))</td>
                                            <td style="text-align:center; font-weight: normal" width="200px">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.ValoresNIncentivo[i][1]))</td>
                                            <td style="text-align:right; padding-right: 10px; font-weight: normal;" width="400px">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.ValoresNIncentivo[i][2]))</td>
                                        </tr>
                                    </table>
                                </th>
                            </tr>
                        }
                        <tr>
                            <th>
                                <table>
                                    <tr>
                                        <th style="text-align:center" width="500px">&nbsp;</th>
                                        <td style="text-align:center" width="200px">&nbsp;</td>
                                        <td style="text-align:right; padding-right: 10px;" width="400px">@string.Format("{0:N}", ViewBag.DebitoNIncentivo)</td>
                                    </tr>
                                </table>
                            </th>
                        </tr>
                    </table>
                </th>

            </tr>
        </tbody>

    </table>
</div>

<div style="width:100%; padding-top:10px; page-break-before: always;">
    <table class="table" style="font-size:14px;" border="1">
        <tr style="border:1px solid">
            <th style="text-align:center; border:1px solid">CÁLCULO PARA O RATEIO DOS CRÉDITOS</th>
        </tr>
        <tr>
            <th>
                <table>
                    <tr>
                        <td style="text-align:center; font-weight: normal;" width="700px">
                            Total Saída
                        </td>
                        <td style="text-align:right; padding-right: 10px; font-weight: normal;" width="700px">@string.Format("{0:N}", ViewBag.TotalVendas)</td>
                    </tr>
                    <tr>
                        <td style="text-align:center; font-weight: normal;" width="700px">
                            Saída Incentivada
                        </td>
                        <td style="text-align:right; padding-right: 10px; font-weight: normal;" width="700px">@string.Format("{0:N}", ViewBag.TotalVendasIncentivadas)</td>
                    </tr>
                    <tr>
                        <td style="text-align:center; font-weight: normal;" width="700px">
                            Saída não Incentivada
                        </td>
                        <td style="text-align:right; padding-right: 10px; font-weight: normal;" width="700px">@string.Format("{0:N}", ViewBag.TotalVendasNIncentivadas)</td>
                    </tr>
                    <tr>
                        <td style="text-align:center" width="700px">
                            Percentual para utilização do crédito (%)
                        </td>
                        <td style="text-align:right; padding-right: 10px;" width="700px">@string.Format("{0:N}", ViewBag.PercentualCreditoNIncentivo)</td>
                    </tr>
                    <tr>
                        <td style="text-align:center; font-weight: normal;" width="700px">
                            Crédito ICMS das entradas
                        </td>
                        <td style="text-align:right; padding-right: 10px; font-weight: normal;" width="700px">@string.Format("{0:N}", ViewBag.Credito)</td>
                    </tr>
                    <tr>
                        <th style="text-align:center" width="700px">
                            Valor do crédito a ser utilizado nas compras
                        </th>
                        <th style="text-align:right; padding-right: 10px;" width="700px">@string.Format("{0:N}", ViewBag.CreditoNIncentivo)</th>
                    </tr>
                </table>
            </th>
        </tr>
    </table>
</div>

