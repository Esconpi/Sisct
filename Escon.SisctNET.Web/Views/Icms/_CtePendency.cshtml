<table class="table" style="border:1px solid;">
    <thead>
        <tr>
            <th style="border:1px solid; text-align:center;" colspan="3">NFe</th>
            <th style="border:1px solid; text-align:center;" colspan="5">CTe</th>
        </tr>
        <tr style="border:1px solid;">
            <th style="border:1px solid; text-align:center;">
                Nº Nota
            </th>
            <th style="border:1px solid; text-align:center;">
                CNPJ do Emitente
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor
            </th>
            <th style="border:1px solid; text-align:center;">
                Nº CTe
            </th>
            <th style="border:1px solid; text-align:center;">
                CST
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor
            </th>
            <th style="border:1px solid; text-align:center;">
                Base Cálculo
            </th>
            <th style="border:1px solid; text-align:center;">
                Icms
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nota in ViewBag.Notas)
        {
            <tr style="border:1px solid;">
                <td style="border:1px solid; padding-left:1%;">
                    @nota[1]
                </td>
                <td style="border:1px solid; padding-left:1%;">
                    @nota[2]
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    @string.Format("{0:N}", Convert.ToDecimal(nota[4].Replace(',', '*').Replace('.', ',').Replace('*', '.')))
                </td>
                <td style="border:1px solid; padding-left:1%;">
                    @nota[3]
                </td>
                <td style="border:1px solid; padding-left:1%;">
                    @nota[5]
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(nota[8].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(nota[6].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(nota[7].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
            </tr>
        }
        <tr>
            <th style="border:1px solid; text-align:center;" colspan="5">Total</th>
            <th style="text-align:right; border:1px solid;">@string.Format("{0:N}", ViewBag.VTotal)</th>
            <th style="text-align:right; border:1px solid;">@string.Format("{0:N}", ViewBag.BaseCalc)</th>
            <th style="text-align:right; border:1px solid;">@string.Format("{0:N}", ViewBag.Icms)</th>
        </tr>
    </tbody>
</table>