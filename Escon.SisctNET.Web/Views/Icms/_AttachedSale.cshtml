<table class="table" style="border:1px solid;">
    <thead>
        <tr style="border:1px solid;">
            <th style="border:1px solid; text-align:center;">
                CFOP
            </th>
            <th style="border:1px solid; text-align:center;">
                NCM
            </th>
            <th style="border:1px solid; text-align:center;">
                CEST
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor Contábil
            </th>
            <th style="border:1px solid; text-align:center;">
                BC ICMS
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor ICMS
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor FECOP
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cfop in ViewBag.Cfop)
        {
            <tr style="border:1px solid;">
                <td style="border:1px solid; padding-left:1%;">
                    @cfop[0] - @cfop[1]
                </td>
                <td style="border:1px solid; padding-left:1%;">
                    @cfop[9]
                </td>
                @if (cfop[2] == "")
                {
                    <td style="border:1px solid; padding-left:1%;">
                    </td>
                }
                else
                {
                    <td style="border:1px solid; padding-left:1%;">
                        @cfop[2]
                    </td>
                }
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(cfop[4].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(cfop[5].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(cfop[6].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(cfop[7].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
            </tr>
        }
        <tr>
            <th style="border:1px solid; text-align:center;" colspan="3">Total</th>
            <th style="text-align:right; border:1px solid;">@string.Format("{0:N}", ViewBag.valorContabil)</th>
            <th style="text-align:right; border:1px solid;">@string.Format("{0:N}", ViewBag.baseCalculo)</th>
            <th style="text-align:right; border:1px solid;">@string.Format("{0:N}", ViewBag.valorIcms)</th>
            <th style="text-align:right; border:1px solid;">@string.Format("{0:N}", ViewBag.valorFecop)</th>
        </tr>
    </tbody>
</table>
