<diV class="pull-right">
    <strong>Total Vendas: </strong> @ViewBag.TotalVendas
</diV>
<table class="table">
    <thead>
        <tr>
            <th>
                Ncm
            </th>
            <th>
                Valor
            </th>
            <th>
                Percentual %
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.ResumoNcm.Count; i++)
        {
            <tr>
                <td>@ViewBag.ResumoNcm[i][0]</td>
                <td>@ViewBag.ResumoNcm[i][2]</td>
                <td style="width:150px;">@ViewBag.ResumoNcm[i][3]</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Total</th>
            <td>@ViewBag.TotalNcm</td>
            <td>@ViewBag.PercentualTotal</td>
        </tr>
    </tfoot>
</table>
