<style>
    .table > thead > tr > th {
        border-bottom: 2px solid;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        border: 1px solid;
    }
</style>

<table class="table" style="border:1px solid;">
    <thead>
        <tr>
            <th style="border:1px solid; text-align:center;">
                Natureza da Operação
            </th>
            <th style="border:1px solid; text-align:center;">
                Modelo
            </th>
            <th style="border:1px solid; text-align:center;">
                Nº NFe
            </th>
            <th style="border:1px solid; text-align:center;">
                Data e Hora
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in ViewBag.Notes)
        {
            <tr>
                <td>@note[0]</td>
                <td>@note[1]</td>
                <td>@note[2]</td>
                <td>@Convert.ToDateTime(note[3]).ToString("dd/MM/yyyy hh:mm:ss")</td>
                <td style="text-align:right; padding-right:1%;">@string.Format("{0:N}", Convert.ToDecimal(note[4].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</td>
            </tr>
        }
        <tr style="border:2px solid;">
            <th colspan="4">Total</th>
            <th style="text-align:right; padding-right:1%;">@string.Format("{0:N}", ViewBag.Total)</th>
        </tr>
    </tbody>
</table>