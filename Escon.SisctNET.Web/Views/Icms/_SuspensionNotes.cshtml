<style>
    .table > thead > tr > th {
        border-bottom: 2px solid;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        border: 1px solid;
    }
</style>

<table class="table" style="border:2px solid;">
    <thead>
        <tr>
            <th style="text-align:center">
                Natureza da Operação
            </th>
            <th>
                Modelo
            </th>
            <th>
                Número
            </th>
            <th style="text-align:center">
                Data
            </th>
            <th>
                Valor
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.Notes.Count; i++)
        {
            <tr>
                <td>@ViewBag.Notes[i][0]</td>
                <td>@ViewBag.Notes[i][1]</td>
                <td>@ViewBag.Notes[i][2]</td>
                <td>@ViewBag.Notes[i][3]</td>
                <td style="text-align:right; padding-right:1%;">@string.Format("{0:N}", Convert.ToDecimal(ViewBag.Notes[i][4].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</td>
            </tr>
        }
    </tbody>
    <tbody>
        <tr style="border:2px solid;">
            <th colspan="4">Total</th>
            <th style="text-align:right; padding-right:1%;">@string.Format("{0:N}", ViewBag.Total)</th>
        </tr>
    </tbody>
</table>