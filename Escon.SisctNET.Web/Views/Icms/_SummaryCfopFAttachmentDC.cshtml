
<table class="table" style="border:1px solid;">
    <thead>
        <tr style="border:1px solid;">
            <th style="border:1px solid; text-align:center;" colspan="9">ENTRADA</th>
        </tr>
        <tr style="border:1px solid;">
            <th style="border:1px solid; text-align:center;">
                CFOP
            </th>
            <th style="border:1px solid; text-align:center;" colspan="4">
                Descrição
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor Contábil
            </th>
            <th style="border:1px solid; text-align:center;">
                BC ICMS
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor ICMS
            </th>
            <th style="border:1px solid; text-align:center;">
                Valor FECOP
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.CfopForaAnexoEntry.Count; i++)
        {
            <tr style="border:1px solid;">
                <td style="border:1px solid; padding-left:1%;">
                    @ViewBag.CfopForaAnexoEntry[i][0]
                </td>
                <td style="border:1px solid; padding-left:1%;" colspan="4">
                    @ViewBag.CfopForaAnexoEntry[i][1]
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(ViewBag.CfopForaAnexoEntry[i][2].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(ViewBag.CfopForaAnexoEntry[i][3].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(ViewBag.CfopForaAnexoEntry[i][4].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
                <td style="border:1px solid; text-align:right; padding-right:1%;">
                    <b>@string.Format("{0:N}", Convert.ToDecimal(ViewBag.CfopForaAnexoEntry[i][5].Replace(',', '*').Replace('.', ',').Replace('*', '.')))</b>
                </td>
            </tr>
        }
    </tbody>
</table>

