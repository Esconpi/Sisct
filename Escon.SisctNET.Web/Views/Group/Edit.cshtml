@model Escon.SisctNET.Model.Group

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title"><strong>Editar Grupo:</strong> @Model.Description</h3>
    </div>
    <hr />
    <div class="box-body">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-lg-12 col-md-6 col-xs-12">
                        <label asp-for="AttachmentId" class="control-label"></label>
                        <select asp-items="@ViewBag.AttachmentId" name="AttachmentId" class="form-control selectoption" id="attachment"></select>
                        <span asp-validation-for="AttachmentId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">

                    <div class="form-group col-lg-2 col-md-2 col-xs-12">
                        <label asp-for="Item" class="control-label"></label>
                        <input asp-for="Item" class="form-control number" type="text" />
                        <span asp-validation-for="Item" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-10 col-md-10 col-xs-12">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group col-lg-12 col-md-12 col-xs-12">
                    <input type="submit" value="Confirmar" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>

<script type="text/javascript">
     var anexo = @Model.AttachmentId;
    $("#attachment").children('option').each(function () {
        if ($(this).val() == anexo) {
            $(this).attr('selected', true);
        }
    });

</script>