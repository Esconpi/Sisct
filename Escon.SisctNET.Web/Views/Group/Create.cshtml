@model Escon.SisctNET.Model.Group

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Novo Grupo</strong>
        </h3>

    </div>
    <hr />
    <div class="box-body">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-lg-12 col-md-6 col-xs-12">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group col-lg-12 col-md-6 col-xs-12">
                            <label asp-for="AttachmentId" class="control-label"></label>
                            <select asp-items="@ViewBag.AttachmentId" name="AttachmentId" class="form-control selectoption"></select>
                            <span asp-validation-for="AttachmentId" class="text-danger"></span>
                        </div>
                    </div>
                    

                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <input type="submit" value="Cadastrar" class="btn btn-success pull-right" />
                    </div>

                </form>
            </div>
    </div>
    <div class="box-footer">

    </div>
</div>

