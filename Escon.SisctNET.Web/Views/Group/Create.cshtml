@model Escon.SisctNET.Model.Group

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header">
        <a asp-action="Index" size="large" class="glyphicon glyphicon-circle-arrow-left pull-left"></a>
        <h3 class="box-title">
            <strong>Novo Grupo</strong>
        </h3>

    </div>
    <hr />
    <div class="box-body">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="form-group col-lg-4 col-md-6 col-xs-12">
                            @Html.LabelFor(model => model.Active, "Incentivo", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.Active, new { @data_off = "Não", @data_on = "Sim", @data_size = "small", @data_toggle = "toggle", @data_onstyle = "success", @data_offstyle = "danger", @readonly = "true" })
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="form-group col-lg-12 col-md-6 col-xs-12">
                            <label asp-for="AttachmentId" class="control-label"></label>
                            <select asp-items="@ViewBag.AttachmentId" name="AttachmentId" class="form-control selectoption" id="status" onchange="ativar_button()"></select>
                            <span asp-validation-for="AttachmentId" class="text-danger"></span>
                        </div>

                    </div>
                  
                    <div class="row">

                        <div class="form-group col-lg-2 col-md-2 col-xs-12">
                            <label asp-for="Item" class="control-label"></label>
                            <input asp-for="Item" class="form-control" type="text" />
                            <span asp-validation-for="Item" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-10 col-md-10 col-xs-12">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <input type="submit" value="Cadastrar" id="ativa" class="btn btn-success pull-right" disabled ="disabled" />
                    </div>

                </form>
            </div>
    </div>
    <div class="box-footer">

    </div>
</div>

<script type="text/javascript">

    function ativar_button() {
        var opcao = document.getElementById("status").value;
        if (opcao == "0") {
            document.getElementById("ativa").disabled = true;
        } else {
            document.getElementById("ativa").disabled = false;
        }
    }
</script>

